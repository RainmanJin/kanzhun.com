@import "../common/var";

footer.footbottom {
  width: 100%;
  min-width: 990px;
  margin-top: 40px;
  padding: 30px 0;
  background-color: #6f6e6e;
  nav {
    text-align: center;
    a {
      display: inline-block;
      color: #fff;
      margin: 0 30px 15px 0;

      &.a_green {
        color: @green;
      }
    }
  }
  p {
    //padding-bottom: 34px;
    text-align: center;
    color: @grey_99;
  }
}

a.left-feedback{
  position: fixed;
  left: 0;
  top: 50%;
  text-decoration: none;
  text-align: center;
  padding: 1.2em 8px;
  color: #ffffff;
  display: block;
  background-color: #333333;
  width: 1em;
  line-height: 1.2em;
  margin-top: -3em;
  .transition(padding .1s linear);

  i{
    width: 15px;
    height: 17px;
    display: block;
    overflow: hidden;
    background: @icons no-repeat -38px -556px;
    margin-bottom: 5px;
  }

  &:hover{
    background-color: @green;
    padding-left: 10px;
  }
}
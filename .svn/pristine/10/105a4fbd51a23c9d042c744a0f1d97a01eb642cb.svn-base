@import "../common/var";

//可能会删除的
aside {
  &.prompt {
    padding: 10px;
    margin-top: 15px;
    background-color: #fcf5e1;
    border: 1px solid #feebb7;
    border-radius: 5px;

    p {
      color: @grey_99;
    }
  }
}

//label
label {
  &.ttlabel {
    display: inline-block;
    width: 4em;
    margin-right: 15px;
    font-size: 14px;
    height: 34px;
    line-height: 34px;
    text-align: right;
    vertical-align: middle;
  }
}

div {
  &.searchinfo {
    padding: 0 20px;
    height: 50px;
    line-height: 50px;
    background-color: #f3f3f4;
    color: @grey_99;
    font-size: 14px;
    margin-bottom: 20px;

    p {
      a {
        text-decoration: none;
      }
    }
  }
}

//line
.line_only{
  border-bottom: 1px solid @grey_e7;
  height: 0;
  overflow: hidden;
}

.line{
  border-bottom: 1px solid @grey_e7;
  height: 0;
  overflow: hidden;
  margin: 15px 0;
}

//黄色背景提示
.promppt_info {
  background-color: #fffedf;
  border-left: 4px solid #ffc962;
}

h3.p_tt {
  position: relative;
  margin-bottom: 30px;
  padding-left: 8px;
  border-left: 4px solid @green;
  height: 1em;
  line-height: 1em;
  font-size: 16px;
  zoom: 1;

  span.explain {
    font-weight: normal;
  }
}


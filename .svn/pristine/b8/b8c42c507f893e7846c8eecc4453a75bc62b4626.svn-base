@import "common/var";

@-webkit-keyframes shake {
  0%, 100% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }

  10%, 30%, 50%, 70%, 90% {
    -webkit-transform: translateX(-10px);
    transform: translateX(-10px);
  }

  20%, 40%, 60%, 80% {
    -webkit-transform: translateX(10px);
    transform: translateX(10px);
  }
}

@keyframes shake {
  0%, 100% {
    -webkit-transform: translateX(0);
    -ms-transform: translateX(0);
    transform: translateX(0);
  }

  10%, 30%, 50%, 70%, 90% {
    -webkit-transform: translateX(-10px);
    -ms-transform: translateX(-10px);
    transform: translateX(-10px);
  }

  20%, 40%, 60%, 80% {
    -webkit-transform: translateX(10px);
    -ms-transform: translateX(10px);
    transform: translateX(10px);
  }
}

.shake {
  -webkit-animation-name: shake;
  animation-name: shake;
}
.animated {
  -webkit-animation-duration: .6s;
  animation-duration: .6s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

//dialog
div.auth{
    padding: 30px 0;
    margin-top: 15px;
    min-height: 650px;
}
.dialog{
    width: 890px;
    margin: 0 auto;
    padding: 30px 0 30px 20px;
    background-color: #fff;
    border: 7px solid #e9e9e9;
    border-radius: 5px;
    overflow: hidden;
    zoom: 1;

    div.kanzhun_show {
        float: left;
        width: 326px;
        margin-right: 40px;
    }

    ul.login {
        float: left;
        width: 292px;
        margin-right: 18px;
        zoom: 1;
    }
    li{
        position: relative;
        margin: 15px 0;
        .ifd{
            width: 265px;
        }
        p{
            &.err{
                left: 0;
                display: none;
                width: 246px;
                height: 31px;
                position: absolute;
                z-index: 2;
                top: -40px;
                background: transparent url(../images/login-err.png) no-repeat;
                color: #d60000;
                padding: 8px 10px 0 37px;
                white-space: nowrap;

                i{
                    float: right;
                    width: 20px;
                    height: 20px;
                    cursor: pointer;
                }
            }
        }
    }
    .btn_o_l{
        width: 100%;
        padding: 0;
    }
    aside{
        margin-left: 678px;
    }

    .sys_err{
        color: #d60000;
        height: 16px;
        position: absolute;
        top: -25px;
        left: 0;
        text-align: right;
        width: 292px;
        font-weight: bold;
        z-index: 1;

        span{
            display: inline-block;
        }
    }
}



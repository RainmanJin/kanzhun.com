      aside{
        padding-top: 3px;
        white-space: nowrap;
        float: right;
        text-align: right;

        em{
          display: block;
          color: @grey_99;
          clear: both;
        }

        a {
          display: inline-block;
          margin-left: 20px;
          color: @grey_99;

          &:hover{
            color: @blue;
          }

          span {
            display: inline-block;
            font-size: 0;
            line-height: 0;
            overflow: hidden;
            background: transparent url(../../images/comment.png) no-repeat -145px 0;
            vertical-align: middle;
            margin-right: 5px;
            padding-top: 3px;
            *padding-top: 0;
            width: 13px;
            height: 12px;
          }

          &.helpful{
            position: relative;

            b {
              position: absolute;
              color: #62bb6a;
              font-size: 12px;
              left: 0px;
              top: 2px;
            }

            &:hover {
              color: @grey_99;
              text-decoration: none;

              span {
                background-position: -162px -19px;
              }
            }
          }
          
          &.marked{
            span {
               background-position: -162px -19px;
            }

            &:hover {
              color: @grey_99;
              span {
                 background-position: -162px -19px;
              }
            }
          }

        }
      }
    }

    div.reply{
      clear: both;
      overflow: hidden;
      zoom: 1;
      border-top: 1px solid @grey_e7;
      margin: 15px 0 10px 51px;
      *margin-left: 25px;
      padding-top: 15px;

      textarea{
        width: 570px;
        margin-bottom: 5px;
        border: 1px solid #d9d9d9;

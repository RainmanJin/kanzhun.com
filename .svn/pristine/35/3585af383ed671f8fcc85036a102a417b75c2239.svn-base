@import "../common/var";
@comment_icons: url(../images/comment.png);

p.options{
  a{
    color: @grey_99;

    &:hover{
      color: @blue;
    }

    &.marked{
      color: @grey_99;
    }

    &.helpful{
      &:hover span{
        background-position: -162px 0;
      }
    }
    &.helpful.marked{
      &:hover span{
        background-position: -145px 0;
      }
    }

    &.cmt{
      &:hover span{
        background-position: -200px 0;
      }
    }

    &.share{
      &:hover span{
        background-position: -235px 0;
      }
    }

    &.normala{
      color: @blue;
      &:hover{
        text-decoration: underline;
      }
    }
  }

  em{
    color: @grey_e7;
    margin: 0 5px 0 2px;
  }

  span{
    &.img{
      display: inline-block;
      font-size: 0;
      line-height: 0;
      overflow: hidden;
      background-image: @comment_icons;
      vertical-align: middle;
      margin-right: 5px;
      padding-top: 3px;
      *padding-top: 0;
    }

    &.helpful{
      width: 13px;
      height: 12px;
      background-position: -145px 0;
    }

    &.cmt{
      width: 16px;
      height: 13px;
      background-position: -179px 0;
    }

    &.share{
      width: 9px;
      height: 14px;
      background-position: -221px 0;
    }
  }
}

//面试评论列表详情页的有用分享评论，开始
p.comments {
  em {
    color: @grey_99;
  }
} 
/* 结束 */
div{
  &.comments {
    padding-left: 160px;
    overflow: hidden;
    border-bottom: 1px solid #e7e7e7;
    zoom: 1
  }

  &.comments_con {
    p.c_tt {
      padding: 5px 0 10px 0;
      border-bottom: 1px solid #e7e7e7;
      font-size: 16px;

      i {
        display: inline-block;
        overflow: hidden;
        line-height: 0;
        font-size: 0;
        width: 22px;
        height: 18px;
        background: @icons no-repeat -80px -39px;
        margin-right: 10px;
        vertical-align: middle;
      }
    }
    i{
      &.horn{
        width: 14px;
        height: 17px;
        background-position: -92px 0;
      }

      &.page{
        width: 29px;
        height: 19px;
        background-position: -111px 0;
        position: absolute;
        bottom: -1px;
        right: -1px;
        margin: 0;
      }
    }

    em{
      &.sub{
        padding: 0;
        vertical-align: middle;
      }
    }

   strong{
     &.ok{
       color: @green;
     }

     &.err{
       color: red;
     }
   } 

  dl.ipt_comments {
    overflow: hidden;
    *zoom: 1;

    dt {
      float: left;
      position: relative;

      img {
        width: 56px;
        height: 56px;
      }

      span {
        position: absolute;
        left: 0;
        top: 0;
        display: block;
        width: 56px;
        height: 56px;
        background: url(../images/positionimgs/po_imgs1.png) no-repeat left top;
      }
    }

    dd {
      margin-left: 70px;
      padding-top: 7px;
      overflow: hidden;
      *zoom: 1;
      *display: inline-block;
      *margin-left: 14px;
    }

    textarea{
      margin-bottom: 5px;
      border: 1px solid #d9d9d9;
      border-color: #c1c1c1 #d9d9d9 #d9d9d9 #c1c1c1;
      border-radius: 3px;
      .box-shadow(0 0 2px #d9d9d9);
      overflow: hidden;
      zoom: 1;
      float: left;
      line-height: 1.5em;
      height: 1.5em;
      padding: 10px;
      outline: none;
      overflow-y: hidden;
      width: 553px;
      .transition(height .2s ease);
    }
  }

  .pub_cmt {
    input[type="button"] {
      padding: 0 20px;
    }
  }
}

//v2版本中的button
//黄色提交按钮
.btn_yellow_b {
  height: 36px;
  line-height: 36px;
  background-color: #f97200;
  display: inline-block;
  padding: 0 30px;
  text-align: center;
  color: #ffffff;
  border-radius: 3px;
  cursor: pointer;
  white-space: nowrap;
  font-size: 14px;
  font-weight: normal;

  input, button {
    height: 36px;
    cursor: pointer;
    display: block;
    //padding: 0 26px;
    border: 0;
    background-color: transparent;
    width: 100%;
    overflow: visible;
    color: #ffffff;
    font: normal 14px/1.5 Arial,STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
  }

  &:hover {
    background: #e96b00 url('');
    text-decoration: none;
  }
}

//黄色按钮
.a_yellow_btn {

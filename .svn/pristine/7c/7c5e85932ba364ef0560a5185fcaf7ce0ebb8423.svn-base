@import "var";
@import "common";
@import "autocomplete";

div{
  &.basicinfo{
    padding: 30px 25px;
  }

  &.tabnav{
    width: 363px;
    margin-left: 25px;
    border: 1px solid #b9b9b9;
    background-color: #fff;

    p{
      padding: 5px 0;
      margin-left: -1px;
      background: url(../images/tabbg_img.jpg) no-repeat 1px bottom;
      .transition(all .2s ease);

      em{
        display: inline-block;
        height: 25px;
        line-height: 0;

      }
    }

    a{
      display: inline-block;
      zoom: 1;
      width: 181px;
      height: 30px;
      line-height: 30px;
      color: #797979;
      font-size: 15px;
      text-align: center;
      border-left: 1px solid #b9b9b9;
      
      &:hover{
        text-decoration: none;
      }

      &.current{
        color: @green;
      }
    }
  } 
}

p{
  &.explain{
    text-decoration: underline;
  }

  &.ok{
    padding-bottom: 20px;
    background: url(../images/ugc_img_03.jpg) no-repeat center bottom;
    i{
      vertical-align: -10px;
      margin-right: 10px;
    }
  }
}
.save{
  margin: 40px 0 0 0;
}

dl{
  &.k_detal{
    dt{
      float: left;
      width: 4em;
    }
    dd{
      margin-left: 6em;
      padding: 0;
    }
  }
}


form{
  &.def{
    li{
      margin-bottom: 20px;

      &.mt40{
        margin-top: 40px;
      }
    }

    .ifd_l{
      width: 470px;
    }

    span.err{
      color: @g_red;
      display: none;
    }

    p{
      &.err{
        display: none;
        color: @g_red;
        clear: both;
        text-align: right;
        padding-right: 15px;
        height: 16px;
        line-height: 16px;
        padding-top: 3px;
      }

      &.attention{
        color: @grey_99;
        clear: both;
        text-align: right;
        padding-right: 15px;
        height: 16px;
        line-height: 16px;
        padding-top: 3px;
      }
    }

    label{
      &.t_top{
        padding-top: 10px;
        vertical-align: top;
      }
    }

    .select{
      vertical-align: middle;
      width: 280px;
      display: inline-block;
      *display: inline;
      *zoom: 1;
    }

    .select_light{
      width: 278px;
    }
  }
}

figure{
  &.add_job{
    background-color: #bfbfbf;
    padding: 50px 30px 50px 75px;

    p{
      line-height: 77px;
      color: #FFF;
      font-size: 16px;
    }

     div{
       line-height: 77px;
       color: #FFF;
       font-size: 16px;

       p{
         line-height: 38px;
         vertical-align: middle;
         display: inline-block;
         *display: inline;
         *zoom: 1;
       }

       a{
         color: @green;
       }

       em{
         color: #fff;
         margin: 0 10px;
       }
     }

    img{
      margin-right: 10px;
      cursor: pointer;
    }

    margin-bottom: 25px;
  }
}

ul.job_list{
  li{
    padding: 30px 20px;
    background-color: #fff;
    border-bottom: 1px solid #e4e4e4;
    .box-shadow(1px 2px 2px #e4e5e5);
    margin: 35px 0;
    position: relative;

    span{
      position: absolute;
      top: 15px;
      right: 15px;

      a{
        color: @grey_99;
        margin: 0 5px;
      }
    }

    h3{
      font-size: 20px;
      line-height: 1.8em;
      font-weight: normal;

      a{
        color: @green;
      }
    }

    p{
      padding-top: 5px;

      em{
        margin: 0 5px;
      }
    }
  }
}

dl.mark_list{
  dt{
    color: @green;
    padding: 10px 10px 10px;
  }
  .mark_list_p{
    background-color: #019875;
    padding: 30px 25px;
    position: relative;
    font-size: 18px;
    color: #fff;

    strong{
      font-size: 24px;
      margin-right: 15px;
    }

    img{
      width: 106px;
      height: 106px;
      position: absolute;
      right: 120px;
      top: 10px;
      z-index: 2;
    }

    span{
      position: absolute;
      right: 120px;
      top: 10px;
      z-index: 3;
      width: 106px;
      height: 106px;
      display: block;
      background: transparent url(../images/mark_mask.png) no-repeat;
    }

    .control{
      position: absolute;
      right: 15px;
      top: 15px;
      font-size: 14px;
      z-index: 4;
      a{
        color: #fff;
        margin: 0 5px;
      }
    }
  }

  .mark_list_m{
    background-color: #e7eeed;
    padding: 30px 25px;
    font-size: 16px;
    line-height: 1.8em;
  }

  dd{
    margin-bottom: 25px;
    position: relative;
  }
}

//下拉菜单
dd.openmenu{
  display: none;
  max-height: none;
  width: 502px;
  padding: 20px;
  zoom: 1;
  overflow: visible;

  h2{
    font-size: 16px;
    color: @green;
    font-weight: normal;
    line-height: 1.8em;
    background: url(../images/ugc_img_04.jpg) no-repeat left bottom;
  }
  ul{
    margin-right: -20px;
    padding-top: 10px;
  }
  li{
    position: relative;
    width: 114px;
    float: left;
    margin: 0 60px 5px 0;
    a{
      height: 30px;
      line-height: 30px;
      padding: 0;
      font-size: 15px;
      color: @grey_79;
      .ellipsis('ellipsis');
      width: 6em;

      &:hover,&.hadclick{
        background-color: #fff;
        color: #3daf92;
        i{
          background: @icons no-repeat -232px top;
        }
      }
      i{
        position: absolute;
        right: 0;
        top: 50%;
        margin-top: -2.5px;
        display: inline-block;
        width: 9px;
        height: 5px;
        background: @icons no-repeat -218px top;
      }
    }

    div{
//      display: none;
      visibility: hidden;
      position: absolute;
      z-index: 4;
      top: 30px;
      left: 0;
      width: 160px;
      border: 1px solid #bbe0d7;
      background-color: #f5f5f5;
      a{
        font-size: 14px;
        padding-left: 10px;
        line-height: 2em;
        color: @grey_79;
        white-space: nowrap;
        &:hover{
          background-color: #f5f5f5;
          text-decoration: underline;
        }
      }
    }
  }
}

#portrait{
  width: 550px;
  *height: 490px;

  .dialog_con{
    padding: 0;
    border: 0;
  }
  div{
    height: 440px;
  }
  object{
    float: left;
  }

  h3{
    border-bottom: 1px solid #ccc;
    margin: 0 15px;
    padding: 15px 0 5px;
  }
}

input#addTemptationsField{
  vertical-align: baseline;
}

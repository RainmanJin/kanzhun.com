@import "../common/var";
//chart的色值
@chartColor0:#7db2e6;
@chartColor1:#f4a484;
@chartColor2:#68bf57;
@chartColor3:#f483b7;

//公司待遇pk标题
div.cmp_pk_tt {
	position: relative;

	div {
		&.co_pk_tip_p  {
			position: absolute;
			top: 18px;
			left: 100px;
			width: 12px;
			height: 12px;

			i {
				float: left;
			}
		}

		&.co_pk_tip {
			position: absolute;
			top: 40px;
			left: 0;
			width: 100%;
			background-color: #fff;
			border: 1px solid #cccccc;
			.box-shadow(0 0 10px rgba(0, 0, 0, .2));
			border-radius: 8px;
			z-index: 3;
			i {
				position: absolute;
				top: -9px;
				left: 95px;
				width: 19px;
				height: 11.5px;
				background: url(../images/field/field_img6.png) no-repeat left top;
				.background-size(19px);
				z-index: 4;
			}

			div {
				padding: 15px;
				color: @grey_66;
			}

			&.none{
				display: none;
			}
		}
	}
}

p.charts_explain {
	color: @grey_66;

	em {
		margin: 0 5px;
		color: @grey;
	}

	span {
		//padding-left: 10px;
		color: #f39800;
	}
	i{
		display: inline-block;
		overflow: hidden;
		font-size: 0;
		width: 14px;
		height: 14px;
		line-height: 0;
		margin-right: 5px;
		//background-color: #7db2e6;
		vertical-align: -2px;
		border-radius: 2px;

		&.item1{
			background-color: @chartColor0;
		}
		&.item2{
			background-color: @chartColor1;
		}
		&.item3{
			background-color: @chartColor2;
		}
		&.item4{
			background-color: @chartColor3;
		}
	}
}

ul {
	&.pk {
		overflow: hidden;

		li {
			width: 50%;
			float: left;
			margin-bottom: 10px;
			a {
				display: block;
				margin-right: 10px;
				background-color: #f5f5f5;
				color: @grey_66;
			}

			&:last-child {
				a {
					margin-right: 0;
				}
			}
			&:nth-child(even){
				a {
					margin-right: 0;
				}
			}
		}
	}

	&.pk_cmp {
		a {
			position: relative;
			padding: 10px 25px 10px 10px;
			line-height: 1.1;
			color: @grey_66;

			span {
				display: inline-block;
				overflow: hidden;
				font-size: 0;
				width: 14px;
				height: 14px;
				line-height: 0;
				margin-right: 5px;
				//background-color: #7db2e6;
				vertical-align: -2px;
				border-radius: 2px;

				&.item1{
					background-color: @chartColor0;
				}
				&.item2{
					background-color: @chartColor1;
				}
				&.item3{
					background-color: @chartColor2;
				}
				&.item4{
					background-color: @chartColor3;
				}
			}

			i {
				position: absolute;
				top: 10px;
				right: 10px;
			}

			p {
				.ellipsis(ellipsis);
			}

			&.have_no_select {
				height: 31px;
				line-height: 31px;
				color: #b3b3b3;
				text-align: center;
				border: 1px dashed #e5e5e5;
				padding: 0;
			}
		}
	}
}

a.pk_position {
	position: relative;
	display: block;
	padding: 10px 25px 10px 0;
	background-color: #f5f5f5;
	line-height: 1.1;

	p {
		color: @grey_66;
		.ellipsis(ellipsis);
	}

	em {
		padding: 0 10px 0 10px;
		color: @grey;
	}

	i {
		position: absolute;
		right: 10px;
		top: 10px;
	}
}


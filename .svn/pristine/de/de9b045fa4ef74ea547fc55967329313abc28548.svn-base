@import "var";

//职位详情尾部
.footer_init() {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
footer {
  .footer_init;

  &.po_foot {
    a {
      display: block;
      height: 50px;
      line-height: 50px;
      color: @white;
      font-size: 18px;
      text-align: center;
      background-color: @blue;
    }
  }

  &.forword {
    background-color: @blue;

    a {
      display: inline-block;
      width: 33%;
      text-align: center;
      color: @white;

      span {
        display: inline-block;
        height: 30px;
        line-height: 30px;
        padding-bottom: 2px;
      }
    }
  }

  &.nearme {
    .footer_init; 
    overflow: hidden;
    height: 50px;
    line-height: 50px;
    background-color: #f9f9f9;
    border-top: 1px solid #b2b2b2;

    a {
      display: inline-block;
      width: 33%;
      text-align: center;
      vertical-align: middle;
    }
  }
}

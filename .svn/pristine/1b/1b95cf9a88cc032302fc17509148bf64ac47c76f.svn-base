@import "../common/var";


input {
  &.ipt {
    font-size: 14px;
    height: 14px;
    width: 310px;
    line-height: 14px;
    padding: 9px 10px;
    border: 1px solid #cfcfcf;
    border-width: 2px 1px 1px 2px;
    vertical-align: middle;
    &.b{
      width: 490px;
    }
  }

  &.pop_ipt {
    border-color: @grey_99;
    border-width: 1px;
  }

  &.otherreson {
    border-color: #c2c2c2 @grey_99 #c2c2c2 #c2c2c2;
    border-width: 2px 1px 2px 2px;
  }
  &.error{
    border-color: red;
  }
}
textarea{
  &.text{
    font-size: 14px;
    width: 490px;
    padding: 9px 10px;
    border: 1px solid #cfcfcf;
    border-width: 2px 1px 1px 2px;
    vertical-align: middle;    
  }
}
.select{
  height: 32px;
  border: 1px solid #cfcfcf;
  border-width: 2px 1px 1px 2px;
  position: relative;

  dt{
    text-align: center;
    vertical-align: middle;
    height: 32px;
    background-color: #fff;
    padding: 0 40px 0 0;

    input{
      height: 32px;
      line-height: 32px;
      float: left;
      border: 0;
      width: 100%;
      color: @def;
      padding-left: 10px;
      background-color: transparent;
      text-align: left;
    }

    span{
      width: 32px;
      height: 18px;
      padding-top: 14px;
      position: absolute;
      right: 0;
      top: 0;
      display: block;
      border-left: 1px solid #e6e6e6;
      font-size: 0;
      background-color: #f6f6f6 ;
      text-align: center;
      cursor: pointer;
      zoom: 1;

      i{
        display: inline-block;
        font-size: 0;
        zoom: 1;
        width: 9px;
        height: 5px;
        overflow: hidden;
        .transition(all .2s linear);
        .transform(rotate(0deg));
        background: transparent url(../images/trangle.png) no-repeat;
      }

      &.on{
        i{
          .transform(rotate(180deg));
        }
      }
    }
  }

  dd{
    position: absolute;
    z-index: 100;
    max-height: 260px;
    overflow: auto;
    .box-shadow(0 2px 6px #ccc);
    left: -1px;
    top: 33px;
    border: 1px solid #cfcfcf;
    border-top: 0;
    background-color: #fff;
    width: 100%;
    display: none;
    a{
      display: block;
      height: 26px;
      line-height: 26px;
      padding-left: 15px;

      &:hover{
        text-decoration: none;
        background-color: #007ead;
        color: #fff;
      }
    }
  }
}

.select-tree{
  dd{
    max-height: inherit;
    overflow: visible;
    padding-right: 0;

    .select-second{
      display: none;
      position: absolute;
      background-color: #fafafa;
      left: 100%;
      width: 310px;
      border: 1px solid #cfcfcf;
      padding: 15px 0;
      top: 0;
      margin-left: -1px;
      overflow: hidden;

      a{
        width: 140px;
        float: left;
      }
    }

    .select-second-item{
      position: relative;

      a.select-opts-tt{
        border-style: solid;
        border-color: transparent;
        border-width: 1px 0;

        span{
          background: url("../images/select-r.png") no-repeat right 6px;
          overflow: hidden;
          display: block;
          margin-right: 10px;
        }

        &:hover{
          background-color: transparent;
          color: #007ead;
        }
      }

      &.on{
        a.select-opts-tt {
          background: #fafafa;
          border-color: #cfcfcf;
          color: #007ead;
          .box-shadow(-2px 0px 3px #ccc);
          position: relative;
          z-index: 2;

          span{
            background: transparent;
          }
        }

        .select-second{
          display: block;
        }
      }
    }
  }
}
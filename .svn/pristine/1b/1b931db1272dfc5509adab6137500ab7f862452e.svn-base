@import "common/var";
@import "modules/company/common";
@import "noresult";
@import '../v2/css/company/piece/co-header';  //公司级页面头部样式

//虚线
p.dashed_line {
  border-bottom: 1px dashed #c2c2c2;
  height: 0;
  overflow: hidden;
}

//主要信息介绍
dl {
  &.main_intro {
    overflow: hidden;
    *zoom: 1;
    padding-top: 3px;

    dt {
      float: left;
      width: 110px;

      div {
        position: relative;
        width: 110px;
        height: 110px;
        margin-bottom: 10px;

        img {
          width: 110px;
          height: 110px;
        }

        span {
          position: absolute;
          top: 0;
          left: 0;
          width: 110px;
          height: 110px;
          background: url(../images/employee_detail_img.png) no-repeat left top;
        }
      }

      & > a {
        margin: 0 auto;
        width: 80px;
        display: block;
        border: 2px solid #f4cb9a;
        border-radius: 3px;
        text-align: center;
        color: #4c4c4c;

        &:hover {
          text-decoration: none;
          border-color: #f48d19;
        }
      }
    }

    dd {
      margin-left: 140px;
      padding-top: 6px;

      div {
        &.e_n_sex {
          overflow: hidden;
          *zoom: 1;
          margin-bottom: 10px;

          strong {
            float: left;
            font-size: 20px;
            line-height: 1em;
            margin-right: 10px;
          }

          i {
            float: left;
            margin-top: 8px;

            &.e_male {
              width: 12px;
              height: 12px;
              overflow: hidden;
              display: inline-block;
              margin-right: 5px;
              background: url(../images/icons.png) no-repeat -60px -128px;
            }

            &.e_female {
              width: 12px;
              height: 12px;
              overflow: hidden;
              display: inline-block;
              margin-right: 5px;
              background: url(../images/icons.png) no-repeat -85px -128px;
            }

            &.vip {
              margin: 6px 5px 0 0;
              vertical-align: normal;
            }
          }

          span {
            float: left;
            line-height: 1em;
            padding-top: 7px;
          }
        }

        &.e_con_align {
          margin-bottom: 5px;

          span {
            float: left;
          }

          p {
            margin-left: 70px;
            color: @grey_99;
          }
        }
      }

      & > p {
        margin-bottom: 10px;

        em {
          color: #dadada;
          margin: 0 10px;
        }
      }
    }
  }

  &.position_career {
    margin: 0 0 10px 56px;
    padding-bottom: 10px;
    border-left: 1px solid #cccccc;

    dt {
      float: left;
      width: 114px;
      padding: 0 6px 10px 0;
      margin-left: -56px;
      background-color: #fff;

      a {
        text-decoration: none;
        display: block;
        margin: 0 auto;
        width: 62px;
        height: 62px;
        border: 1px solid #e8e8e8;
        overflow: hidden;
        font-size: 0;

        img {
          width: 62px;
          display: inline-block;
          vertical-align: middle;
        }

        span {
          display: inline-block;
          width: 0;
          height: 100%;
          vertical-align: middle;
        }

        &.current {
          border-color: @green;
          width: 84px;
          height: 84px;

          img {
            width: 84px;
            height: 84px;
          }
        }
      }
    }

    dd {
      margin-left: 64px;
      padding-bottom: 20px;
      border-bottom: 1px dashed #c2c2c2;

      em.p_c_line {
        color: #eaeaea;
        margin: 0 10px;
      }

      h4 {
        line-height: 1em;
        margin-bottom: 8px;
        font-size: 16px;
        font-weight: normal;

        a {
          color: @def;
          text-decoration: none;
        }
      }

      p {
        &.p_c_start {
          padding-bottom: 3px;
          color: @grey_99;

          span.grade_star {
            vertical-align: -7px;
            margin-bottom: 3px;
          }

          strong {
            color: @def;
          }
        }

        &.comment_more {
          margin-bottom: 7px;
        }
      }

      div {
        &.cmp_nohave {
          padding: 15px 10px;
          background-color: #f7ffeb;
        }

        &.career_con {
          position: relative;
          background-color: #f3f3f3;
          padding: 15px 10px;

          & > span {
            position: absolute;
            left: 20px;
            top: -8px;
            height: 0;
            width: 0;
            border-width: 0 6px 8px 6px;
            border-style: solid dashed;
            border-color: transparent transparent #f3f3f3 transparent;
          }

          & > a {
            float: left;
            position: relative;
            width: 56px;
            height: 56px;

            img {
              width: 56px;
              height: 56px;
            }

            span {
              position: absolute;
              top: 0;
              left: 0;
              width: 56px;
              height: 56px;
              background: url(../images/employee_detail_img2.png) no-repeat left top;
            }
          }

          & > div {
            margin-left: 65px;

            p {
              overflow: hidden;
              *zoom: 1;
              margin-bottom: 2px;

              span {
                color: #cccccc;
              }

              em.p_c_tt {
                float: left;
                .ellipsis(ellipsis);
                 width: 340px;
              }
            }
          }
        }
      }
    }
  }

  &.last_noborder {
    border-left: none; 

    dt {
      padding-bottom: 36px;
      background: url(../images/employee_detail_img4.jpg) no-repeat 56px bottom;
    }

    dd {
      border-bottom: none;
     }
  }
}

div.top_vertical_line {
  margin: 4px 0 6px 56px;
  height: 30px;
  width: 0px;
  border-left: 1px solid #cccccc;
}

//右侧
ul.workin {
  padding-top: 5px;

    li {
      padding: 10px 0;
      overflow: hidden;

      a.imgshow {
        display: block;
        float: left;
        width: 58px;
        height: 58px;
        position: relative;
        margin-right: 10px;

        img {
          width: 56px;
          height: 56px;
        }

        span {
          display: inline-block;
          width: 56px;
          height: 56px;
          position: absolute;
          top: 0;
          left: 0;
          background: url(../images/employee_img4.png) no-repeat left top;
        }

        &:hover {
          /* span {
            background-position: -63px top;
          } */
        }
      }

      div {
        float: left;
        width: 195px;
        padding-top: 7px;

        p {
          .ellipsis(ellipsis);

          i {
            margin-left: 5px;
            vertical-align: -1px;
          }

          & > a {
            line-height: 1em;
          }
        }
      }
    }
  }




  margin-right: 7px;
  padding-bottom: 70px;
  background: #354257 url(../images/l_con_bg.jpg) no-repeat left top;
}
section.r_con {
  float: left;
  width: 313px;
  padding: 15px 15px 20px 15px;
  background-color: #f3f3f3;
  box-shadow: 1px 1px 2px #d8dad9;
}
section.ugcl_con {
  float: left;
  width: 317px;
  min-height: 1000px;
  _height: 1000px;
  margin-right: 7px;
  padding: 0 13px;
  background: #354257 url(../images/ugc_img_01.jpg) no-repeat left top;

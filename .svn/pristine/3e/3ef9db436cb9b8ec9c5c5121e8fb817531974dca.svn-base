@import "common/var";
@import "module/reset";
@import "common/common";


.dl-img{
  display: block;
}
.dl-txt{
  background-color: #fff;
  padding: 30px 0 15px;
  text-align: center;
  line-height: 2em;
}

.dl-bb{
  color: #46c133;
  font-size: 28px;
  text-align: center;
  font-weight: bold;
  padding-bottom: 30px;
}

a.download{
  font-size: 20px;
  position: absolute;
  left: 50%;
  width: 200px;
  margin-left: -101px;
  color: #ffffff;
  border: 1px solid rgba(255,255,255, .4);
  background-color: rgba(17,126,0,.3);
  display: block;
  padding: 10px 0;
  text-align: center;
  top: 270px;
}

@media screen and (max-width: 330px) {
  a.download {
    top: 230px;
  }
}

.dl-mask{
  text-align: center;
  background-color: rgba(0, 0, 0, .6);
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;

  img{
    width: 90.625%;
    margin-top: 20px;
  }
}
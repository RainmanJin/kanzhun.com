@import "common/var";
@import "module/slide_menu";
@import "module/dialog";

header.page_hd{
	.menu{
		display: block;
		left: 10px;
		width: 40px;
		height: 36px;
		padding: 9px 10px 0 0;
		border: 0;
		top: 0;

		img{
			border: 1px solid #96c153;
			padding: 5px 10px;
			border-radius: 2px;
			width: 16px;
			height: 16px;
		}

		i.news_counts {
			position: absolute;
			height: 18px;
			line-height: 18px;
			text-align: center;
			padding: 0 6px;
			top: 3px;
			left: 30px;
			font-size: 12px;
			background-color: #e61e13;
			border-radius: 30px;
			color: #fff;
		}
	}
}

.authcode{
	margin-top: 15px;
	overflow: hidden;

	.divCommonInput{
		margin-right: 100px;
	}

	img{
		width: 85px;
		height: 40px;
		float: right;
	}
}


.profile_grey{
	background-color: #e5e5e5;
}
.profile input[type=checkbox]{
	vertical-align: middle;
}

.def_f_r{
	margin-left: 5.5em;
	button{
		width: 80px;
	}
}


dl.timeline{
	position: relative;
	border-left: 1px solid @green;
	margin-left: 5px;
	margin-top: 15px;

	dt{
		width: 10px;
		height: 10px;
		position: absolute;
		background-color: @green;
		border-radius: 5px;
		left: -5px;

	}

	dd{
		background-color: #fff;
		border-radius: 4px;
		margin-left: 22px;
		padding: 10px 0 0;
		position:relative;
		margin-bottom: 15px;
		top: -10px;
	
		h3{
			padding: 10px 10px 5px;
			font-weight: bold;
		}
		p{
			padding: 0 10px;
		}
	}

	.tl_logo{
		font-size: 17px;
		padding: 10px 10px;
		overflow: hidden;
		img{
			width: 68px;
			height: 68px;
			border: 1px solid @grey_border;
			vertical-align: middle;
			margin-right: 10px;
		}
		.co_name{
			margin-top: 20px;
			margin-left:80px;
			display: block;
		}
	}

	ul{
		font-size: 12px;
		overflow: hidden;
		border-top: 1px solid #e5e5e5;
		margin-top: 10px;
	}

	li{
		width: 50%;
		text-align: center;
		height: 34px;
		line-height: 34px;
		float: left;

		&:nth-of-type(2){
			width: 50%;
			.box-sizing();   
			border-left: 1px solid #e5e5e5;
		}
	}

	i.tl_lt{
		position: absolute;
		left: -7px;
		top: 10px;
		display: block;
		width: 7px;
		height: 10px;
		background: url(../images/tl_t.png) no-repeat;
	}

	.tl_photo{
		padding: 4px;
		border: 1px solid #e5e5e5;
		margin: 10px;

		img{
			width: 100%;
			display: block;
		}
	}
}

.fb_list{
	border: 1px solid @grey_border;;
	background-color: #fff;
	padding: 0;
	margin-top: 0;
	margin-bottom: 10px;
	p{
		margin: 0px 0;
		padding: 0 10px;
		&:first-child{
			margin-top:10px;
		}
	}

	ul{
		font-size: 12px;
		overflow: hidden;
		border-top: 1px solid #e5e5e5;
		margin-top: 10px;
	}

	li{
		width: 33%;
		text-align: center;
		height: 34px;
		line-height: 34px;
		float: left;

		&:nth-of-type(2){
			width: 34%;
			.box-sizing();
			border-left: 1px solid #e5e5e5;
			border-right: 1px solid #e5e5e5;
		}
	}
}


h2 {
	&.tt_greenline {
		padding: 10px;
		font-weight: normal;
		font-size: 16px;
		i {
			display: inline-block;
			height: 14px;
			width: 3px;
			background-color: @green;
			margin-right: 9px;
			vertical-align: -2px;
		}
	}
}

p {
	&.detail {
		background-color: #fff;
		padding: 5px 10px;
		text-indent: 2em;

.l_con {
	p.ps_time {
		color: @grey_99;
	}
	p.au_top {
		position: relative;
		height: 32px;
		margin-top:32px;
		padding: 0 13px 0 57px;
		line-height: 32px;
		border-top: 1px solid #cccccc;
		border-bottom: 1px solid #e7e7e7;
		background-color: #f5f5f5;
		clear: both;
		z-index: 6;
		a.logo {
			display: block;
			position: absolute;
			left: 10px;
			top: -10px;
			width: 30px;
			height: 30px;
			line-height: 30px;
			padding: 2px;
			background-color: #fff;
			border: 1px solid #E7E7E7;
			font-size: 0;
			text-align: center;

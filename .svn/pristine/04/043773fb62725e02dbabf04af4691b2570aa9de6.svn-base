	}

	&.wagelist{
		border-top: 1px solid #E7E7E7;
		li{
			height: 52px;
			line-height: 52px;
			padding-left: 12px;
			border-bottom: 1px solid #E7E7E7;
			overflow: hidden;
			zoom: 1;
			em.salary{
				float: right;
				strong{
					font-size: 16px;
					vertical-align: middle;
				}
			}
			em.industry{
				display: inline-block;
				width: 10em;
			}
			span{
				display: inline-block;
				//margin-left: 60px;
				width: 375px;
				height: 12px;
				vertical-align: middle;
				line-height: 0;
				font-size: 0;
				zoom: 1;
				i{
					display: inline-block;
					zoom: 1;
					height: 12px;
					background-color: #7cb228;
				}
			}
		}
	}
}

h3.hot{

@import "../../common/var";

#j_responsibily, #succ_responsibily {
  div.dialog_con {
    padding: 10px 15px 20px 15px;

    h1 {
      padding-bottom: 10px;
      margin-bottom: 20px;
      font-size: 18px;
      font-weight: normal;
      border-bottom: 1px solid @grey_e7;
    }
  }
}

#j_responsibily {
  div.dialog_con {
    div {
      width: 425px;
      overflow: hidden;
      *zoom: 1;

      textarea {
        float: left;
        width: 403px;
        height: 140px;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid @grey_e7;
        .box-shadow(inset 1px 1px 5px #ebebeb);

        &.err {
          border-color: red;
          .box-shadow(inset 0 0 2px red);
        }
      }
    }
  }
}

#succ_responsibily {
  div.dialog_con { 
    div {
      width: 300px;
      padding: 0 20px 20px 20px;
    }
  }
}
@import "../common/var";

.icons_base(){
  display: inline-block;
  vertical-align: middle;
  background-repeat: no-repeat;
}
i{
  &.i{
    .icons_base;
    background-image: url(../images/icons.png?r=0711);
    .background-size(100px);
  }
  &.i_2{
    .icons_base;
    background-image: url(../images/icons_2.png?r=0711);
    .background-size(100px);    
  }
  &.i_left{
    width: 13px;
    height: 21px;
    background-position: 0 0;
  }
  &.i_search{
    width: 12px;
    height: 12px;
    background-position: -12.5px 0;    
  }
  &.i_cry{
    width: 26px;
    height: 26px;
    background-position: -24.5px 0;    
  }
  &.i_share{
    width: 22px;
    height: 20px;
    background-position: -51px 0;    
  }
  &.i_house{
    width: 19px;
    height: 14px;
    background-position: -73.5px 0;    
  } 
  &.i_addr{
    width: 14px;
    height: 17px;
    background-position:0 -26px;    
  }
  &.i_industry{
    width: 17px;
    height: 13px;
    background-position: -31.5px -51px;
  }
  &.i_horn{
    width: 24px;
    height: 24px;
    background-position:-14.5px -26px;    
  }  
  &.i_heart{
    width: 24px;
    height: 24px;
    background-position:-38.5px -26px;    
  } 
  &.i_origin{
    width: 24px;
    height: 24px;
    background-position:-62.5px -26px;    
  }
  &.i_right{
    width: 8px;
    height: 13px;
    background-position:-88px -26px;    
  }
  &.i_triangle_greyT{
    width: 18px;
    height: 10px;
    background-position:0 -49.5px;        
  }  
   &.i_triangle_greyL{
    width: 10px;
    height: 18px;
    background-position:-18.5px -50px;        
  } 
  &.i_circle_1{
    width: 21px;
    height: 21px;
  }
  &.i_circle_2{
    width: 32px;
    height: 33px;
    background-position:-21px 0;   
  }
  &.i_circle_3{
    width: 32px;
    height: 33px;
    background-position:-53.5px 0; 
  }

  &.i_verified{
    width: 61px;
    height: 16px;
    background-position: 0 -69px;
  }

  &.i_unverified{
    width: 61px;
    height: 16px;
    background-position: 0 -85.5px;
  }
}
span.i_triangle_greenT{
  display: inline-block;
  border:9px solid rgba(0,0,0,0);
  border-top:0;
  border-bottom:10px solid @green_1;
}

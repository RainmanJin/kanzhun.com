body {
  font: normal 14px/1.5 Arial, STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
  color: #343434;
  background-color: #e1e3e2;
}
body.index {
  background-color: #354257;
  color: #ffffff;
}
div.container {
  width: 990px;
  margin: 50px auto 0 auto;
  padding-bottom: 30px;
}
input,
button {
  font-family: Arial, STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
}
header {
  background-color: #019875;
  border-bottom: 2px solid #fff;
  overflow: hidden;
  zoom: 1;
}
header .header {
  width: 990px;
  height: 46px;
  margin: 0 auto;
}
header .logo {
  float: left;
  margin-top: 11px;
}
header p {
  color: #fff;
}
header p.name {
  float: left;
  padding-top: 17px;
}
header p.name em {
  margin: 0 3px 0 10px;
  vertical-align: 1px;
}
header p.download {
  float: right;
  padding-top: 17px;
}
header p.download a {
  color: #fff;
  text-shadow: 0px 0px 2px #c3c3c3;
}
footer {
  width: 100%;
  min-width: 990px;
  margin-top: 20px;
  background-color: #576273;
}
footer nav {
  text-align: center;
}
footer nav a {
  display: inline-block;
  color: #fff;
  margin: 35px 30px 22px 0;
}
footer nav a.micro_message {
  position: relative;
}
footer nav a.micro_message i {
  display: none;
}
footer nav a.micro_message:hover i {
  position: absolute;
  top: -240px;
  left: -70px;
  display: inline-block;
  width: 202px;
  height: 232px;
  background: url(../images/footer_weixin_hover.png) no-repeat center;
}
footer p {
  padding-bottom: 34px;
  text-align: center;
  color: #999999;
}

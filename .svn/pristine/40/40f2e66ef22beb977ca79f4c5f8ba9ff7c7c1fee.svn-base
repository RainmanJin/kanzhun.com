@import "../../../css/common/var";
@import "../var";
@comment_icons: url("@{img}/comment.png");
//分享有用评论
p.u_options {
  a {
    color: @grey_66;
    font-size: 12px;

    &:hover {
      color: #2c84cc;
      text-decoration: none;

      em, i {
        color: #2c84cc;
      }
    }

    &.marked {
      color: @grey_66;

      &:hover {
        color: @grey_66;

        em, i {
          color: @grey_99;
        }
      }
    }
  }

  span {
    margin-right: 5px;
    vertical-align: -2px;
  }
}

a {
  &.helpful {
    &:hover {
      span {
        background-position: -110px -41px;
      }
    }
  }

  &.comment {
    &:hover {
      span {
        background-position: -92px -41px;
      }
    }
  }

  &.share {
    &:hover {
      span {
        background-position: -74px -41px;
      }
    }
  }
  //点击完之后的样式
  &.helpful.marked {
    cursor: default;

    span.u_feel_helpful {
      background-position: -110px -41px;
    }

    &:hover {
      span {
        background-position: -110px -41px;
      }
    }
  }

  &.comment.marked {
    span {
      background-position: -92px -41px;
    }

    &:hover {
      span {
        background-position: -92px -41px;
      }
    }
  }

  &.share.marked {
    span {
      background-position: -74px -41px;
    }

    &:hover {
      span {
        background-position: -74px -41px;
      }
    }
  }
}


div{
  &.comments {
    padding-left: 160px;
    overflow: hidden;
    border-bottom: 1px solid #e7e7e7;
    zoom: 1
  }

  &.comments_con {
    p.c_tt {
      padding: 5px 0 10px 0;
      border-bottom: 1px solid #e7e7e7;
      font-size: 16px;

      i {
        display: inline-block;
        overflow: hidden;
        line-height: 0;
        font-size: 0;
        width: 22px;
        height: 18px;
        background: @icons no-repeat -80px -39px;
        margin-right: 10px;
        vertical-align: middle;
      }
    }
    i{
      &.horn{
        width: 14px;
        height: 17px;
        background-position: -92px 0;
      }

      &.page{
        width: 29px;
        height: 19px;
        background-position: -111px 0;
        position: absolute;
        bottom: -1px;
        right: -1px;
        margin: 0;
      }
    }

    em{
      &.sub{
        padding: 0;
        vertical-align: middle;
      }
    }

   strong{
     &.ok{
       color: @green;
     }

     &.err{
       color: red;
     }
   } 

  dl.ipt_comments {
    overflow: hidden;
    *zoom: 1;

    dt {
      float: left;
      position: relative;

      img {
        width: 57px;
        height: 57px;
      }

      /*span {
        position: absolute;
        left: 0;
        top: 0;
        display: block;
        width: 56px;
        height: 56px;
        background: url("@{img}/positionimgs/po_imgs1.png") no-repeat left top;
      }*/
    }

    dd {
      position: relative;
      margin-left: 70px;
      padding-top: 7px;
      *zoom: 1;
      *display: inline-block;
      *margin-left: 14px;

      span.angle_wrap {
        position: absolute;
        top: 24px;
        left: -6px;
        border-width: 7px 7px 7px 0;
        border-style: dashed solid;
        border-color: transparent #cccccc transparent transparent;
      }

      span.angle_inner {
        position: absolute;
        top: 24px;
        left: -5px;
        border-width: 7px 7px 7px 0;
        border-style: dashed solid;
        border-color: transparent #ffffff transparent transparent;
      }
    }

    textarea{
      margin-bottom: 5px;
      border: 1px solid #d9d9d9;
      border-color: #c1c1c1 #d9d9d9 #d9d9d9 #cccccc;
      border-radius: 3px;
      .box-shadow(0 0 2px #d9d9d9);
      overflow: hidden;
      zoom: 1;
      float: left;
      line-height: 1.5em;
      height: 1.5em;
      padding: 10px;
      outline: none;
      overflow-y: hidden;
      width: 586px;
      .transition(height .2s ease);
    }
  }

  .pub_cmt {
    input[type="button"] {
      padding: 0 20px;
    }
  }
}
&.hrstatement{
    position: relative;
    margin: 15px 0;
    border: 1px solid #f9f0d0;
    background-color: #fffed6;
    padding-bottom: 5px;

    h3{
      height: 32px;
      line-height: 32px;
      color: #f6600e;
      font-size: 14px;
      font-weight: normal;
      border-bottom: 1px solid #fdf4d4;
      padding-left: 15px;
    }

    p{
      padding:5px 15px 0 15px;
      &.time{
        color: @grey_99;
      }
    }
  }
}


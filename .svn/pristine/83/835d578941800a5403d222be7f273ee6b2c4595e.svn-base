@import "../../../../css/common/var";
@import "../../var";
div.hrEnter_part{
  background-color: #d6ecfe;
  border-left: 5px solid #2c84cc;
  padding: 10px 15px;
  position: relative;
  a.hre_bt{
    background-color: #eae207;
    border: 1px solid #ccc;
    padding: 8px 25px;
    position: absolute;
    top: 12px;
    right: 45px;
    border-radius: 3px;
    &:hover{
      text-decoration: none;
    }
  }
  a.bt_close{
    position: absolute;
    right: 10px;
    top: 5px;
    background: url('@{img}/icons_v2.png') no-repeat -180px -60px;
    width: 13px;
    height: 13px;
    display: block;
    .transition(background-color .2s ease);

    &:hover{
      background-color: #e0e0e0;
    }
  }
}
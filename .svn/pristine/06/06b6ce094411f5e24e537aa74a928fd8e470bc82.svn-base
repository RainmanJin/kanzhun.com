@import "common/var";
//@import "modules/mini_search";
@import "../v2/css/modules/top-search";
@import "modules/share";

div.error{
	width: 990px;
	margin: 15px auto 0 auto;
	background-color: #fff;
	min-height: 490px;
}
dl {
	&.content {
		overflow: hidden;
		zoom: 1;
		padding: 150px 0 0 160px;
		dt{
			float: left;
			height: 134px;
			width: 280px;
			margin-top: 5px;
			background: url(../images/errors.jpg) no-repeat;
			&.fiveerror{
				background-position: left top;
			}
			&.fourerror{
				background-position: left -206px;
			}
		}	
		dd{
			margin-left: 305px;
			h1{
				width: 360px;
				font-size: 22px;
				border-bottom: 1px solid #f7f7f7;
				font-weight: normal;
			}
			p{
				&.youcan{
					width: 350px;
					border-top: 1px solid #f2f2f2;
					padding: 10px 0;
				}
				a{
					display: inline-block;
					height: 30px;
					line-height: 30px;
					color: #797979;
					padding: 0 15px;
					border-radius: 15px;
					background-color: #f6f6f6;
					border: 1px solid @green;
					margin-right: 15px;
					&:hover{
						background-color: #fff;
						text-decoration: none;
					}
				}
			}
		}
	}
	&.fourcontent {
		background: url(../images/500and404error.png) no-repeat left top;
	}
	
}
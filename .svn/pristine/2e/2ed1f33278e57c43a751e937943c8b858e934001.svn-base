@import "common/var";
@import "module/company_header";
@import "module/manageleft";
@import "module/bottomFix";
@import "module/paging";

h3.p_tt {
    padding-left: 8px;
    border-left: 4px solid @green;
    height: 1em;
    line-height: 1em;
    font-size: 14px;
    overflow: hidden;
    zoom: 1;
    .p1{
    	font-size: 12px;
    	font-weight: normal;
    	color: @grey_99;
    }
    p{
    	float: right;
    	font-size: 12px;
    	font-weight: normal;
    	color: @grey_99;
    	span{
    		color: @green;
    	}    	
    }
}
i{
	&.round_orange_s{
		display: inline-block;
		width: 17px;
		height: 17px;
		line-height: 17px;
		text-align: center;
		color: #fff;
		background-color: @orange;
		border-radius: 5px;
		vertical-align: middle;
	}
}

section.manageContent{
	width: 950px;
	margin: 0 auto 40px;
	padding: 20px;
	background-color: #fff;
	min-height: 351px;
	overflow: hidden;
	.manageLeft{
		float: left;
	}	
	.manageRight{
		float: left;
		width: 705px;
		margin-left: 20px;
		padding-left: 20px;
		border-left: 1px solid #e7e7e7;
		min-height: 600px;
		ul.joblist{
			margin-top:10px;
			li{
				background-color: #f0f0f0;
				margin-top: 10px;
				padding: 20px 30px;
				position: relative;
				.h{
					font-size: 18px;
					a{
						color: #007ead;
					}
				}
				.p1{
					margin-top: 8px;
					em{
						margin: 0 5px;
						color: @grey_99;
					}
				}
				.p2{
					margin-top: 8px;
					color: @grey_99;
				}
				.rSet{
					position: absolute;
					top: 20px;
					right: 30px;
					text-align: right;
					.pB{
						margin-top: 30px;
						a{
							color: @grey_99;
						}
						em{
							color: @grey_99;
							margin: 0 5px;
						}
					}
				}
			}
			&.resume{
				border-top: 0;
				.rSet{
					p{
						color: @grey_99;
						&.pB{
							margin-top: 60px;
						}
					}
				}
			}
		}
		.add{
			margin-top: 10px;
			height: 120px;
			background-color: #f0f0f0;
			.a_add{
				display: inline-block;
				margin: 30px 0 0 95px;
			}
			span{
				color: @grey_99;
				margin-left: 10px;
			}
			p{
				float: right;
				padding: 50px 20px 0 0;
				em{
					color: @green;
				}
			}
		}
		.job_header{
			background-color: #f0f0f0;
			padding: 20px 30px;
			position: relative;
			.h{
				font-size: 18px;
			}
			.p1{
				margin-top: 8px;
				em,span{
					margin: 0 5px;
					color: @grey_99;
				}
			}
			.rSet{
				position: absolute;
				top: 20px;
				right: 30px;
				text-align: right;
				.pB{
					margin-top: 30px;
					a{
						color: @grey_99;
					}
					em{
						color: @grey_99;
						margin: 0 5px;
					}
				}
			}
		}
		.job_detail{
			padding:15px 30px;
			.job_request{
				font-size: 16px;
				span{
					color: #eb7676
				}
				em{
					margin: 0 5px;
				}
			}
			p.good{
				font-size: 16px;
				margin-top: 10px;
			}
			ul.good{
				margin-top: 10px;
				li{
					float: left;
					border: 1px solid #e7e7e7;
					background-color: #f0f0f0;
					margin-right: 10px;
					padding:2px 5px;
				}
			}
			h4.title{
				clear: both;
				padding-top: 40px;
				i{				
					display: inline-block;
					width: 98px;
					height: 31px;
					line-height: 31px;
					background: @btn_bgs no-repeat;
					background-position: 0 -120px;
					font-size: 16px;
					color: #fff;
					text-align: center;
				}
			}
			p.addr{
				margin: 40px 0 0;
			}
		}
		.job_edit{
			margin-top:10px;
			border-top: 1px solid #e7e7e7;
			ul{
				margin-top: 25px;
				li{
					margin-bottom: 25px;
					label{
						display: inline-block;
						margin-right: 15px;
						width: 5em;
						text-align: right;
						float: left;
						height: 35px;
						line-height: 35px;
						em{
							color: @red;
						}
					}
					input.m{
						width: 100px;
					}	
					&.radio{
						span{
							display: inline-block;							
							border: 1px solid #e7e7e7;
							padding: 7px 13px;
							margin-right: 5px;
							cursor: pointer;
							&.current{
								background-color: #f0f0f0;
								border: 1px solid @green;
							}				
						}
					}
					&.good{
						overflow: hidden;
						label{
							float: left;
							height: 28px;
							line-height: 28px;
						}
						.rGood{
							float: left;
							dl{
                width: 620px;

								dt{
									margin: 10px 0;
									color: @grey_99;
								}
								dd{
                  margin-bottom: 10px;
									float: left;
									background-color: #f0f0f0;
									margin-right:10px;
									padding: 5px 0; 
								}
								&.hot{
									dd{
										text-align: center;
										width: 100px;
										cursor: pointer;
									}
								}
								&.self{
                  display: none;
									height: 28px;
									dd{
										position: relative;
										padding-left: 14px;
										padding-right: 14px;
										a{
											position: absolute;
											top:-8px;
											right: -8px;
										}
									}
								}							
							}
							.input{
								clear: both;
								input{
									margin-right: 10px;
								}
							}
						}

					}									
					&.tLine{
						padding-top:25px;
						border-top: 1px solid #e7e7e7;
					}
					&.textarea{
						overflow: hidden;
						label{
							float: left;
							height: 18px;
							line-height: 18px;
						}
						.tR{
							float: left;
							.p1{
								color: @grey_99;
							}
							textarea{
								margin-top: 10px;
							}
							.red{
								display: inline-block;
								width: 100px;
							}
						}
					}
					&.sel{
						height: 35px;
						dl{
							width: 330px;
							float: left;
						}
						.red{
							height: 35px;
							line-height: 35px;
						}
					}
					&.sbm{
						text-align: center;
					}
				}
			}
		}
		.job_success{
			margin-top:10px;
			border-top: 1px solid #e7e7e7;	
			h4.title{
				font-size: 24px;
				font-weight: normal;
				margin: 40px 0 20px 70px;
				padding-bottom: 20px;
				border-bottom: 1px solid #e7e7e7;	
				float: left;
				height: 37px;
			}	
			p{
				clear: both;
				margin-left: 110px;
				line-height: 2;
			}
		}
		dl.nav{
			overflow: hidden;
			margin-top:10px;
			padding: 0 0 0 30px;
			border-bottom: 1px solid #e7e7e7;	
			dt{
				float: left;
				margin-left: -8px;
				padding: 5px 8px;
			}
			dd{
				float: left;
				margin-right: 20px;
				padding: 5px 8px;
				&.current{
					background-color: #f0f0f0;
				}
			}
		}
		.resume_detail{
			h4.title{
				margin: 40px 0 0 10px;
				font-weight: normal;
				font-size: 14px;
				line-height: 1;
			}
			.content{
				position: relative;
				color: #343434;
				margin-left: 10px;
				padding-bottom: 25px;
				font-size: 14px;
				p{
					line-height: 2;	
				}
				.rHeadpic{
			    position: absolute;
			    right: 100px;
			    top: 15px;
			    border: 1px solid #e7e7e7;
			    padding: 2px;
			    height: 115px;
			    width: 115px;
			    img{
				    height: 115px;
				    width: 115px;
			    }
				}
			}
		}
	}
}


@import "common/var";
@import "common/reset";
@import "common/common";
@import "module/animate";

body,html{
  height: 100%;
  color: #fff;
}
.swiper-container{
  height: 100%;
}
.swiper-wrapper{
  height: 100%;
}
.page{
  width: 100%;
  height: 100%;
  position: relative;

  img{
    display: block;

    &:nth-of-type(1){
      width: 100%;
    }

    &:nth-of-type(2){
      height: 125px;
      margin: 10px 0 0 50px;
    }
  }
}

@media screen and (max-height: 470px) {
  .page{

    img{
      &:nth-of-type(2){
        height: 95px;
        margin: 10px 0 0 50px;
      }
    }
  }
}






.slide_up{
  position: absolute;
  bottom: 5px;
  left: 50%;
  margin-left: -10px;
  z-index: 20;
  i{
    display: inline-block;
    width: 20px;
    height: 15px;
    background: url("@{img_path}/up.png") no-repeat;
    background-size: 20px;
    -webkit-animation: arrowsUp 1s infinite linear;
  }
}
@-webkit-keyframes arrowsUp{
  0%{
    -webkit-transform: translate(0,0);
  }
  50%{
    -webkit-transform: translate(0,-5px);
  }
  100%{
    -webkit-transform: translate(0,0);
  }
}

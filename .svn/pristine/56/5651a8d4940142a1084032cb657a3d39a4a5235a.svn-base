@import "var";

i{
  &.grey_arrow{
    display: inline-block;
    width: 13px;
    height: 9px;
    font-size: 0;
    line-height: 0;
    background: @icons no-repeat left top;
    overflow: hidden;
  }

  &.grey_arrow_up{
    display: inline-block;
    width: 13px;
    height: 9px;
    font-size: 0;
    line-height: 0;
    background: @icons no-repeat left -11px;
    overflow: hidden;
  }

  //Success
  &.Success{
    display: inline-block;
    width: 40px;
    height: 39px;
    font-size: 0;
    line-height: 0;
    background: @icons no-repeat -104px top;
    overflow: hidden;
  }
}


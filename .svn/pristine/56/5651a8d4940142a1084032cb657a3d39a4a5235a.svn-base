//有边的绿色btn
.border_btn{
  display: inline-block;
  height: 39px;
  line-height: 39px;
  padding: 0 62px;
  background-color: #009871;
  border: 1px solid #d7d7d7;
  border-radius: 3px;
  font-size: 18px;
  color: @white;
  &:hover{
    background-color: #008563;
    text-decoration: none;
  }
}

.btn_grey_s{
  border: 1px solid #dfdfdf;
  height: 24px;
  line-height: 24px;
  background: @icons repeat-x 0 -198px;
  display: inline-block;
  padding: 0 26px;
  text-align: center;
  color: @def;
  border-radius: 2px;
  cursor: pointer;
  white-space: nowrap;
  &:hover{
    border: 1px solid #d3d3d3;
    background: #f6f6f6 url();
    text-decoration: none;
  }
}
.keyword{
  position: relative;
  display: inline-block;
  height: 40px;
  line-height: 40px;
  text-align: center;
  padding: 0 15px;
  margin-right: 10px;
  cursor: default;
  color: @white;
  font-size: 16px;
  background-color: @green;
  margin-bottom: 10px;
  i{
    cursor: pointer;
    display: none;
    width: 16px;
    height: 17px;
    font-size: 0;
    line-height: 0;
    background: @icons no-repeat -83px top;
    position: absolute;
    right: -3px;
    top: -4px;
  }
  &:hover{
    text-decoration: none;
    i{
      display: block;
    }
  }
}


//label
.label{
  display: inline-block;
  width: 4em;
  text-align: right;
  margin-right: 15px;
  vertical-align: middle;
  color: @grey_79;
  font-size: 16px;
}

//textarea
textarea{
  &.chat_fild{
    font: normal 16px/1.5 Arial,STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
    width: 470px;
    padding: 12px 10px;
    resize: none;
    border: 1px solid #dedede;
    border-color: #b9b9b9 #e3e3e3 #ececec #b9b9b9;
    color: @placeholder;
    margin: 0;
    vertical-align: middle;
    .box-shadow(0 0 1px #b9b9b9);
  }

  &.light{
    border: 2px solid #82c9b9;
    border-color: #61bda8 #82c9b9 #61bda8 #82c9b9;
    padding: 11px 9px;
    .box-shadow(0 0 1px #57d6b9);
  }
}

//select
.select{
  height: 38px;
  border: 1px solid #dedede;
  border-color: #b9b9b9 #e3e3e3 #ececec #b9b9b9;
  .box-shadow(0 0 1px #b9b9b9);
  position: relative;

  dt{
    text-align: center;
    vertical-align: middle;
    height: 38px;
    background-color: #fff;
    padding: 0 40px 0 0;

    input{
      height: 38px;
      line-height: 38px;
      float: left;
      border: 0;
      width: 100%;
      color: @grey_99;
      padding-left: 15px;
      background-color: transparent;
      text-align: left;
    }

    span{
      width: 36px;
      height: 22px;
      padding-top: 16px;
      position: absolute;
      right: 0;
      top: 0;
      display: block;
      border-left: 1px solid #e6e6e6;
      font-size: 0;
      background-color: #f6f6f6 ;
      text-align: center;
      cursor: pointer;
      zoom: 1;

      i{
        display: inline-block;
        font-size: 0;
        zoom: 1;
        width: 9px;
        height: 5px;
        overflow: hidden;
        .transition(all .2s linear);
        .transform(rotate(0deg));
        background: transparent url(../images/trangle.png) no-repeat;
      }

      &.on{
        i{
          .transform(rotate(180deg));
        }
      }
    }
  }

  dd{
    position: absolute;
    z-index: 100;
    max-height: 260px;
    overflow: auto;
    .box-shadow(0 2px 6px #ccc);
    left: -1px;
    top: 39px;
    border: 1px solid #aad8cd;
    border-top: 0;
    background-color: #fff;
    width: 100%;
    display: none;
    a{
      display: block;
      height: 26px;
      line-height: 26px;
      padding-left: 15px;
      color: @grey_79;

      &:hover{
        text-decoration: none;
        background-color: #aad8cd;
        color: #fff;
      }
    }
  }
}

.select_light{
  border: 2px solid #dedede;
  border-color: #61bda8 #82c9b9 #61bda8 #82c9b9;
  .box-shadow(0 0 1px #57d6b9);
  height: 36px;

  dt{
    height: 36px;

    input{
      height: 36px;
      line-height: 36px;
    }

    span{
      padding-top: 14px;
    }
  }

  dd{
    border: 2px solid #dedede;
    border-color: #61bda8 #82c9b9 #61bda8 #82c9b9;
    left: -2px;
    top: 36px;
  }
}

.hadclick{
  border-color: #aad8cd;
  dt{
    span{
      border-color: #aad8cd;
    }
  }
  dd{
    border-color: #aad8cd;
  }
}



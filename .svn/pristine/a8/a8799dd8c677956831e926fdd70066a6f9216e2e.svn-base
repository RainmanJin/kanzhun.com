@import "../common/var";

div {
  &.h_rop {
    width: 100%;
    background-color: @green;

    div {
      width: 990px;
      margin: 0 auto;
      height: 30px;
      line-height: 30px;

      a {
        color: #ffffff;
      }

      nav{
        a{
          height: 30px;
          line-height: 30px;
          float: left;
          padding: 0 12px;
          &:nth-of-type(1){
            padding-left: 0;
          }

          //导航需要加new或hot图标 只要给a加class = h_i
          &.h_i{
            position: relative;

            i{
              position: absolute;
              right: -8px;
              top: 2px;
            }
          }

          //曝曝入口 下线就注销
          &.h_baobao_tdc{
            position: relative;
            border-left: 1px solid @green;
            border-right: 1px solid @green;

            span{
              position: absolute;
              top: 30px;
              border: 1px solid #cccccc;
              border-top: 0;
              left: -1px;
              width: 103px;
              padding: 10px;
              background-color: #fff;
              display: none;
              z-index: 2;

              img{
                width: 103px;
              }
            }

            &:hover{
              text-decoration: none;
              background-color: #fff;
              color: @green;
              border-left: 1px solid #cccccc;
              border-right: 1px solid #cccccc;

              span{
                display: block;
              }
            }
          }
        }
      }

      em {
        color: #9ad5a0;
        margin: 0 10px;
        vertical-align: 1px;
      }
    }
  }
}

header.global {
  width: 100%;
  background-color: #fff;
  .box-shadow(0 2px 3px rgba(128, 128, 128, .2));
   z-index: 20;

  div {
    width: 990px;
    margin: 0 auto;
    padding: 15px 0;

    a {
      float: left;
      color: @black;

      &.logo {
        width: 125px;
        height: 48px;
        margin-right: 30px;
      }

      &.submission {
        float: right;
        margin: 3px 20px 0 0;
        padding: 10px 15px;
        border: 2px solid #fbd9b2;
        color: @yellow;

        &:hover {
          color: @yellow;
        }

        i {
          margin-right: 7px;
          vertical-align: -3px;
        }
      }

      &:hover {
        text-decoration: none;
        color: #626262;
      }
    }

    nav {
      float: left;
      padding-top: 13px;
      font-size: 18px;

    }

    dl {
      float: left;
      position: relative;
      padding-left: 30px;
      margin-right: 25px;

      dt {
        padding: 0 4px;
        cursor: pointer;

        &.current {
          border-bottom: 4px solid @green;
        }
      }

      span {
        display: inline-block;
        overflow: hidden;
        height: 0;
        width: 0;
        margin-left: 6px;
        border-width: 5px 5px 0 5px;
        border-style: solid dashed;
        border-color: @black transparent transparent transparent;
        vertical-align: 2px;
      }

      dd {
        position: absolute;
        left: -20px;
        top: 50px;
        z-index: 20;
        width: 200px;
        padding: 10px 0;
        border: 1px solid #cccccc;
        background-color: #fff;
        .box-shadow(0 3px 5px rgba(63, 63, 63, .4));
        font-size: 14px;

        img {
          position: absolute;
          top: -12px;
          left: 85px;
        }

        a {
          height: 30px;
          line-height: 30px;
          padding: 0 20px;

          &:hover {
            color: @blue;
          }
        }
      }
    }
  }
}
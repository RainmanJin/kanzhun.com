@import 'reset';
@import 'general';
@import 'component';

section.l_con {
  width: 990px;
  margin: 20px auto 0 auto;
}

dl {
  &.l_d_l {
    overflow: hidden;

    dt {
      float: left;
      width: 500px;
      padding-right: 35px;
      border-right: 1px solid #e7e7e7;

      p {
        height: 35px;
        line-height: 35px;
        overflow: hidden;
        
        span {
          float: right;
        }
      }

      img {
        width: 500px;
      }
    }

    dd {
      margin-left: 625px;

      li {
        padding-bottom: 15px;

        label {
          display: inline-block;
          width: 75px;
          text-align: right;
          padding-right: 20px;
        }

        input[type=text] {
          height: 16px;
          line-height: 16px;
          padding: 5px;
          width: 180px;
          background-color: #fff;
          border: 1px solid #dcdcdc;
          box-shadow: inset 0 1px 1px #ccc;
          margin-right: 10px;
        }

        input[type=button] {
          width: 50px;
          height: 26px;
          line-height: 26px;
          border: 1px solid #ccc;
          background-color: #f1f1f1;
          color: #343434;
          border-radius: 5px;
        }

        input[type=submit] {
          width: 80px;
          height: 26px;
          line-height: 26px;
          border: 1px solid #ccc;
          background-color: #f1f1f1;
          color: #343434;
          border-radius: 5px;
          margin-right: 10px;
        }
      }
    }
  }
}

div.l_d_b {
  dt {
    font-weight: bold;
    font-size: 16px;
    border-bottom: 1px solid #e7e7e7;
    height: 35px;
    line-height: 35px;
  }

  dd {
    padding: 20px 0 20px 80px;
    border-bottom: 1px solid #e7e7e7;

    p {
      &.green {
        color: @green;
      }

      &.red {
        color: red;
      }

      &:last-child{
        text-align: right;
      }
    }
  }
}
@import "module/reset";
@import "common/var";

body,html{
  color: #fff;
  height: 100%;
}
.swiper-container{
  height: 100%;
}
.swiper-wrapper{
  height: 100%;
}
.page{
  width: 100%;
  height: 100%;
  position: relative;
  img{
  }
}

#page3{
   z-index: 2;
 }

#page4{
  width: 100%;
  background: url("@{img-path}/page4.jpg") no-repeat  #9db9d6;

  .content {
    width: 100%;
    text-align: center;
    .addr {
      width: 90%;
    }
    @media screen and (min-height: 480px) {
      .addr {
        width: 90%;
        margin-top: 20px;
      }
    }
  }
}

.sign_wrap{
  position: absolute;
  text-align: center;
  width: 100%;
  top:74%;
  .wrap{
    width: 60%;
    margin: 0 auto;
    padding-bottom: 2px;
    border:1px solid #bfd1e4;
    border-radius: 20px;

    .sign{
      width:98%;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 16px;
      padding: 8px 0px;
      color: #739fd0;
      display: block;
      font-size: 20px;
      font-weight: bolder;
    }
  }
  img{
    width: 20%;
    margin-top: 10px;
  }
}


#page5{
  background: url("@{img-path}/end_bg.jpg")  no-repeat #5073a9;
  background-size: 100%;
}

#link{
  .a_wrap{
    width: 60%;
    margin: 0 auto;
    text-align: center;
    margin-top: 90%;
    img{
      width: 45px;
      margin-right: 10px;
    }
  }
}

#cooperation{
  text-align: center;
  color: #fff;
  margin-top: 20px;
}

#url{
  width: 30%;
  margin: 0 auto;
  margin-top: 40px;
  img{
    width: 100%;
  }
}

.slide_up{
  position: absolute;
  bottom: 10px;
  left: 50%;
  margin-left: -13px;
  z-index: 20;
  i{
    display: inline-block;
    width: 25px;
    height: 15px;
    background: url("@{img-path}/up.png") no-repeat;
    background-size: 25px;
    -webkit-animation: arrowsUp 1s infinite linear;
  }
}
@-webkit-keyframes arrowsUp{
  0%{
    -webkit-transform: translate(0,0);
  }
  50%{
    -webkit-transform: translate(0,-5px);
  }
  100%{
    -webkit-transform: translate(0,0);
  }
}
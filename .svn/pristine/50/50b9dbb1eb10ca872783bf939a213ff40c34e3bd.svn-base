.boxstyle{margin:0 5px 0 5px;background-color:#fff;border-radius:5px;-webkit-box-shadow:0 2px 5px #d0d0d2;-moz-box-shadow:0 2px 5px #d0d0d2;-ms-box-shadow:0 2px 5px #d0d0d2;box-shadow:0 2px 5px #d0d0d2}.newslist{padding:10px 10px 0 10px;margin-bottom:10px}.newslist h2{font-size:16px;font-weight:normal;line-height:1.5em;padding-bottom:5px}.newslist h2 span.green{color:#6ba409}.newslist h2 span.pink{color:#ec7676}.newslist h2 span.bluegreen{color:#0eb6b7}.newslist h2 span.blue{color:#3788c9}.newslist h2 span.yellow{color:#dd882d}.newslist h2 span.shallow{color:#1dbf84}.newslist h2 span.caramel{color:#c7a02b}.newslist h2 span.purposered{color:#c85fc4}.newslist a img{width:100%;height:auto;margin-bottom:10px}.newslist p.explain{color:#999}.newslist p.from{color:#ccc;height:40px;line-height:40px;border-top:1px solid #dfdfdd}section.menu{background-color:#fff;padding-left:10px;white-space:nowrap;position:relative}section.menu .menu_wrap{padding-right:30px}section.menu .menu_con{position:relative;overflow:hidden;height:40px;line-height:40px;font-size:14px}section.menu .menu_con p{position:absolute;top:0;left:0}section.menu .menu_con p a{display:inline-block;padding-right:15px;height:40px;line-height:40px}section.menu .menu_con p a.current{color:#7cb228}section.menu .menu_con p a:last-child{padding-right:0}section.menu .moving{position:absolute;top:0;right:0;width:30px;height:30px;text-align:center;line-height:0}section.menu .moving i.arrow_green{width:6px;height:11.5px;margin-top:13px;display:inline-block;line-height:0;font-size:0;background:transparent url('/images/news/icon_7.png') no-repeat;-webkit-background-size:6px 11.5px;-moz-background-size:6px 11.5px;-o-background-size:6px 11.5px;background-size:6px 11.5px}
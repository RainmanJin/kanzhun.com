    border-bottom: 1px solid @grey_ee;
  }
}

//detail
h1.newstt {
  font-size: 24px;
  font-weight: normal;
}

aside {
  &.detailtags {
    span {
      display: inline-block;
      height: 20px;
      line-height: 20px;
      padding: 0 15px;
      margin-right: 10px;
      background-color: @grey_ee;
    }
  }

  &.author {
    em {
      display: block;
    }
  }
}

article {
  &.deatilscon {
    p {
      text-indent: 2em;
      margin-top: 15px;
      font-size: 16px;

      img {
        max-width: 600px;
        _width: 600px;
      }
    }
  }
}

dl {
  &.cmpinfo {
    overflow: hidden;
    zoom: 1;
    dt {
      float: left;

      a {
        width: 83px;
        height: 83px;
        padding: 4px;
        background-color: #fff;
        border: 1px solid @grey_ee;

        img {
          width: 83px;
        }
      }
    }

    dd {
      margin-left: 100px;

      em {
        margin: 0 5px;
        color: @grey_ee;
      }
    }
  }
}

//404
div.error{
  width: 990px;
  margin: 15px auto 0 auto;
  background-color: #fff;
  min-height: 490px;

  dl {
  &.content {
    overflow: hidden;
    zoom: 1;
    padding: 150px 0 0 160px;
    dt{
      float: left;
      height: 134px;
      width: 280px;
      margin-top: 5px;
      background: url(../images/errors.jpg) no-repeat;
      &.fiveerror{
        background-position: left top;
      }
      &.fourerror{
        background-position: left -206px;
      }
    } 
    dd{
      margin-left: 305px;
      h1{
        width: 360px;
        font-size: 22px;
        border-bottom: 1px solid #f7f7f7;
        font-weight: normal;
      }
      p{
        &.youcan{
          width: 350px;
          border-top: 1px solid #f2f2f2;
          padding: 10px 0;
        }
        a{
          display: inline-block;
          height: 30px;
          line-height: 30px;
          color: #797979;
          padding: 0 15px;
          border-radius: 15px;
          background-color: #f6f6f6;
          border: 1px solid @green;
          margin-right: 15px;
          &:hover{
            background-color: #fff;
            text-decoration: none;
          }
        }
      }
    }
  }
  &.fourcontent {
    background: url(../images/500and404error.png) no-repeat left top;
  }
  
}
}

//首页改版新闻列表
div.items {
  dl {
    padding-bottom: 20px;
    margin-bottom: 15px;
    border-bottom: 1px solid #e7e7e7;
    overflow: hidden;
    *zoom: 1;

    dt {
      em {
        color: #cccccc;
        font-size: 12px;
        margin-top: 4px;
      }

      p {
        a {
          &.green {
            color: #6ba409;
          }
          &.pink {
            color: #ec7676;
          }
          &.bluegreen {
            color: #0eb6b7;
          }
          &.blue {
            color: #3788c9;
          }
          &.yellow {
            color: #dd882d;
          }
          &.shallow {
            color: #1dbf84;
          }
          &.caramel {
            color: #c7a02b;
          }
          &.purposered {
            color: #c85fc4;
          }
        }

        span {
          color: #cccccc;
          font-size: 12px;
          vertical-align: -1px;
        }
      }
    }

    div {
      margin-left: 190px;

      h4 {
        padding-bottom: 5px;
        font-weight: normal;
        font-size: 18px;
        .ellipsis(ellipsis);
        width: 480px;

        a {
          color: #343434;
        }
      }

      p {
        color: @grey_99;
      }
    }
  }
}


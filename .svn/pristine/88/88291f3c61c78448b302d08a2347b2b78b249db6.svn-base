@import "var";

section {
  &.l_i {
    width: 322px;
    float: left;
    border-right: 1px solid @grey_ee;
    padding-right: 16px;
  }

  &.r_i {
    width: 322px;
    float: left;
    padding-left: 16px;
  }
}

h2 {
  &.smalltitle {
    em {
      width: 5em;
    }

    a {
      float: right;
      color: @grey_99;
      cursor: pointer;
      font-size: 14px;

      &:hover {
        text-decoration: none;
      }
    }
  }
}

//banner
div.top_slide_wrap {
  width: 690px;
  height: 460px;
  position: relative;

  div.bx-wrapper {
    overflow: hidden;

    ul {
      &.slide_box {
        height: 460px;
        position: relative;
        overflow:hidden;
        z-index: 4;

        li {
          position: absolute;
          width: 690px;
          height: 460px;
          left: 0;
          top: 0;
          .transition(all .3s ease-out);

          a {
            color: #fff;
            display: block;
            cursor: pointer;

            img {
              width: 690px;
              height: 460px;
            }

            &:hover {
              text-decoration: none;
            }
          }

          p {
            height: 55px;
            line-height: 55px;
            margin-top: -173px;
            padding: 0 20px;
            .ellipsis(ellipsis);
            width: 650px;
            color: #fff;
            font-size: 24px;
          }
        }
      }
      
      &.bx-controls {
        margin-top: -117px;
        background-color: #000;
        padding: 2px 0 2px 2px;
        overflow: hidden;
        *zoom: 1;
        position: relative;
        z-index: 5;

        li {
          float: left;
          position: relative;
          width: 170px;
          height: 113px;
          margin-right: 2px;

          a.actives, a:hover {
            span {
              top: 115px;
            }

            p {
              top: 115px;
            }
          }

          img {
            width: 170px;
            height: 113px;
          }

          span {
            position: absolute;
            left: 0;
            top: 0;
            z-index: 6;
            width: 170px;
            height: 113px;
            background-color: @green;
            opacity: .9;
            .transition(top .5s ease-out);
          }

          p {
            position: absolute;
            left: 0;
            top: 0;
            z-index: 7;
            width: 150px;
            height: 73px;
            padding: 20px 10px;
            color: #fff;
            transition: top .3s ease-out;
          }
        }
      }
    } 
  }

  a.options {
    position: absolute;
    top: 136px;
    width: 46px;
    height: 56px;
    padding: 14px 0 0 24px;
    background-color: #000;
    opacity: .5;
    z-index: 5;

    i {
      display: block;
      font-size: 0;
      line-height: 0;
      width: 20px;
      height: 40px;

      &.pre {
        background: url(../images/icons.png) no-repeat -99px -27px;
      }

      &.next {
        background: url(../images/icons.png) no-repeat -124px -27px;
      }
    }

    &.pre {
      left: 0;
    }

    &.next {
      right: 0;
    }
  }
}

//font
.f_14{
	font-size: 14px;
}
.f_16{
	font-size: 16px;
}
.f_18{
	font-size: 18px;
}



body{
	font: normal 14px/1.5 Arial,STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
	color: @def;
	background-color: #fff;
}

div{
	&.container{
		width: 990px;
		background-color: #fff;
		margin: 0 auto;
		padding-bottom: 25px;
		min-height: 800px;
		margin-top: 20px;
	}
}

u{
	color: #eb7676;
	font-style: normal;
	text-decoration: none;
}

//placeholder
input,textarea:-webkit-input-placeholder { color:@placeholder; }
input,textarea:-moz-placeholder { color:@placeholder; }
input,textarea:-ms-input-placeholder { color:@placeholder; }
input.onholder{color:@placeholder;}
span.onholder{color:@placeholder; position: absolute;z-index: 8;}

input {
	font: normal 14px/1.5 Arial,STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
}

//links
a{
	color: @blue;
	outline-style: none;

	&.a_grey{
		color: @grey_99;
	}

  &.a_green{
    color: @green;
  }

	&.a_d{
		color: @grey_99;
		text-decoration: none;
		&:hover{
			text-decoration: underline;
		}
	}
	&:hover{
		u{
			text-decoration: underline;
		}
	}
}

.grey_99{
	color: @grey_99;
}
.blue{
	color: @blue;
}
.red{
	color: @red;
}
.def{
	color: @def;
}

iframe.overlay{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: 999;
	background-color: transparent;
}

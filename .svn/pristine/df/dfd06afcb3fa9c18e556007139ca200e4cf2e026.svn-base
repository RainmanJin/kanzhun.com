div {
  &.r_wrapper {
    width: 100%;
    min-height: 100%;
    height: auto;
  }

  &.additional {
    height: 65px;
  }
}

section {
  &.probably {
    height: 182px;
    border-bottom: 2px solid #53cac3;

    h1 {
      text-align: center;
      font-size: 18px;
      font-weight: normal;
      margin-bottom: 20px;
      padding-top: 15px;
    }

    div {
      position: relative;

      a {
        position: absolute;
        left: 10px;
        top: 10px;
        color: @white;
        font-size: 16px;

        i {
          margin-right: 5px;
          vertical-align: -5px;
        }
      }
    }

    div.user_img {
      display: block;
      width: 64px;
      height: 64px;
      margin: 0 auto 10px auto;
      border-radius: 100%;
      border: 2px solid #fff;


      img {
        //display: block;
        width: 64px;
        height: 64px;
        border-radius: 64px;
       //-webkit-border-radius: 64px;
      }
    }

    p:nth-of-type(1) {
      font-size: 14px;
      text-align: center;
      margin-bottom: 5px;
    }

    p:last-child {
      text-align: center;
      span {
        display: inline-block;
        padding: 0 15px;
        background-color: #676059;
        height: 20px;
        line-height: 20px;
        font-size: 12px;
        border-radius: 10px;
      }
    }

    &.noborder {
      border-bottom: none;
    }
  }

  &.bg_1 {
    background: url(../images/bg_1.jpg) no-repeat center top;
    .background-size(100%);
  }

  &.bg_2 {
    background: url(../images/bg_2.jpg) no-repeat center top;
    .background-size(100%);

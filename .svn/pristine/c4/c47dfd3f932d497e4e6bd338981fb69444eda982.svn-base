@import "../../common/var";

a {
  &.financing_img {
    display: block;
    width: 264px;
    height:156px;
    cursor: pointer;
  }
  
  &.none {
    display: none;
  }
}
em.secondary_tt {
  display: inline-block;
  *zoom: 1;
  height: 25px;
  padding: 0 10px;
  line-height: 25px;
  background-color: #f2bb39;
  border-radius: 5px;
  color: #ffffff;
}

div.financing {
  dl {
    padding-bottom: 45px;
    margin-left: 20px;
    border-left: 1px solid #efefef;

    dt {
      float: left;
      margin-left: -20px;

      span {
        display: block;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        background: url(../images/financing.png) no-repeat center;
      }
    }

    dd {
      position: relative;
      margin-left: 40px;


      div {
        position: relative;
        padding: 10px 15px;
        background-color: #f6f6f6;
        border-radius: 5px;

        p {
          color: #d79d21;
          font-size: 12px;
        }
      }

      & > p {
        position: absolute;
        top: -25px;
        left: 0;
      }

      & > span {
        position: absolute;
        left: -10px;
        top: 10px;
        content: "";
        overflow: hidden;
        width: 0;
        height: 0;
        border-style: dashed solid;
        border-width: 9px 10px 9px 0;
        border-color: transparent #f6f6f6 transparent transparent;
      }
    }

    &.noborder {
      border-color: #fff;
      padding: 0;
    }
  }
}

//已上市
em.diffcolor {
  background-color: #ff9ba0;
}
ul.listed_detail {
  padding: 15px 20px 5px 20px;
  background-color: #f6f6f6;
  border-radius: 5px;

  li {
    padding-bottom: 10px;
    overflow: hidden;
    *zoom: 1;

    em {
      color: #eb7676;
      font-size: 18px;
    }

    &.stockname {
      span {
        float: left;
      }

      p {
        margin-left: 70px;
      }
    }
  }
}
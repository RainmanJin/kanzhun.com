@import "../../common/var";
input{
	&.uf{
		background-color: #fff;
		height: 16px;
		padding: 8px 10px;
		border: 1px;
		border-style: solid;
		border-color: #d9d9d9 #f4f4f4 #ffffff #f4f4f4;
		width: 210px;
		vertical-align: middle;
		.transition(border .2s linear);
	}

	&.textshadow {
		.text-shadow(1px 1px 6px #ccc);
	}

	&.err{
		border: 1px solid #ff0000;
		.box-shadow(0 0 1px #ff0000);
	}

	&.suc{
		border: 1px solid @green;
		.box-shadow(0 0 1px @green);
	}
}

a{
	&.status{
		height: 46px;
		background: url(../images/large-btn.jpg) repeat-x;
		width: 164px;
		border: 1px solid #cfcfcf;
		border-radius: 5px;
		font-size: 15px;
		text-align: center;
		padding-top: 10px;
		display: inline-block;
		text-decoration: none;
		line-height: 1.2em;
		color: @def;

		&:hover{
			text-decoration: none;
		}
	}

	&.status_checked{
		background: #e5e5e5 url('');
		border: 1px solid #7cb228;
		color: @def;
		cursor: default;
		.box-shadow(0 0 1px @green);

		&:hover{
			text-decoration: none;
			cursor: default;
		}
	}

	&.result, &.result:hover {
		border: 1px solid @green;
		background: @grey_e5 url('');
		cursor: default;
	}

	&.result1 {
		padding: 0;
		width: 110px;
		&:hover {
			border: 1px solid @green;
			background: @grey_e5 url('');
		}

	}
	&.prevestep {
		color: @def;
		padding-left: 30px;
	}

	&.add_btn {
		position: absolute;
		left: 255px;
		top: 8px;
		text-decoration: underline;
	}
}
textarea {
	&.photodetail {
		width: 470px;
		height: 48px;
		padding: 8px 10px;
		display: inline-block;
		border: 1px solid @grey_e7;
		background: #fff;
		resize: none;
		font-size: 14px;
		line-height: 1.6em;
		vertical-align: middle;
		overflow: hidden;
	}

	&.uta{
		width: 516px;
		padding: 5px 5px 5px 40px;
		display: inline;
		border-width: 1px 1px 0 0px;
		border-style: solid;
		border-color: #d6d6d6 #e9e9e9 #fff #e9e9e9;
//		resize: none;
		font-size: 14px;
		line-height: 1.6em;
		background: #fff url(../images/pen.jpg) no-repeat 12px 15px;
		.box-shadow(inset 1px 0px 1px #ccc);
	}

	&.err{
		border: 1px solid #ff0000;
		.box-shadow(0 0 2px #ff0000);
	}

	&.suc{
		border: 1px solid @green;
		.box-shadow(0 0 2px @green);
	}
}

p {
	&.cp_add {
		position: relative;
	}
}

.rating_star{
	display: inline-block;
	font-size: 0;
	height: 30px;
	overflow: hidden;
	background-image: url(../images/rating.png);

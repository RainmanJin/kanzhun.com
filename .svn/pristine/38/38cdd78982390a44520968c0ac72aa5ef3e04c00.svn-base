@import "../../common/var";
div.pk-co{
  overflow: hidden;
  background-color: #e5e5e5;
  margin: 10px 10px 0;
  >dl{
    dt{
      img{
        width: 13px;
        vertical-align: 0px;
        margin-right: 5px;
      }
      font-weight: bold;
      color: #666;
      border-bottom: 1px solid #e4e3e3;
    }

    dd{
      //.box-shadow(0 2px 10px #999);

      >div{
        overflow: hidden;
      }

      li{
        padding: 10px;
        margin-bottom: 10px;
        position: relative;
        background: url("@{img-path}/pk/vs.jpg@{version}") no-repeat center 10px;
        background-color: #fff;
        .background-size(31px);
        a{
          overflow: hidden;
          display: block;
        }
        &.on{
          background-color: #e5e5e5;
        }
      }

      span{
        img{
          border-radius: 8px;
          width: 40px;
          height: 40px;
          vertical-align: middle;
          border: 1px solid #e5e5e5;
        }
        &.center{
          position: absolute;
          bottom: 3px;
          display: block;
          width: 100%;
          font-size: 12px;
          text-align: center;
          i.hot{
            display: inline-block;
            background: url("@{img-path}/pk/hot.png@{version}") no-repeat;
            .background-size(9.5px);
            width: 9.5px;
            height: 10px;
          }
        }
        &.fleft{
          position: relative;
          i.win{
            position: absolute;
            top: 16px;
            left: 35px;
            display: inline-block;
            background: url("@{img-path}/pk/win.png@{version}") no-repeat;
            .background-size(26px);
            width: 26px;
            height: 28px;
          }
        }
        &.fright{
          position: relative;
          i.win{
            position: absolute;
            top: 16px;
            right: 35px;
            display: inline-block;
            background: url("@{img-path}/activity/bcompany/win.png@{version}") no-repeat;
            .background-size(26px);
            width: 26px;
            height: 28px;
          }
        }
      }
    }
  }
}

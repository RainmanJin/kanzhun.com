@import "../common/var";
footer.footer_nav{
	position: fixed;
	bottom: 0;
  z-index: 10;
	width: 100%;
	height: 45px;
	border-top: 1px solid #c0c0c0;
	background-color: #fafafa;
	.box-sizing();
	.back{
		float: left;
		text-align: center;
		a{
			width: 45px;
			height: 45px;
			padding-top: 14px;
			display: block;
			.box-sizing();
		}
	}
	.f_nav_r{
		margin-left:45px;
		ul{
			li{
				.box-sizing();
				border-left: 1px solid #c0c0c0;
				float: left;
				width: 50%;
				height: 45px;
				line-height: 45px;
				text-align: center;
				position: relative;
				a{
					display: block;
				}
				.comboBox{
					display: none;
					position: fixed;
					bottom: 55px;
					dl{
						border: 1px solid #c0c0c0;
						border-radius: 8px;
						background-color: #fff;
						.box-shadow(1px 1px 4px rgba(0,0,0,0.1));
						position: relative;
						dd{							
							border-bottom: 1px solid #c0c0c0;
							a{
								height: 43px;
								line-height: 43px;
								padding: 0 10px; 
							}
							&:last-of-type{
								border-bottom: 0;
							}
						}
						dt{
							line-height: 1;
							i{
								position: absolute;
								bottom: -6px;
							}
						}
					}
				}
			}
		}
	}
}

@import "../common/var";

//buttons
.green-btn{
  background-color: #85c15d;
  text-align: center;
  padding: 8px 0;
  color: #ffffff;
  font-size: 16px;
  cursor: pointer;
  border: 0;
  text-decoration: none;
  width: 100%;
  border-radius: 4px;
  display: block;
}
input[type=submit].green-btn{
  font-size: 16px;
  line-height: 1.5em;
}

.hollow-btn{
  text-align: center;
  padding: 8px 0;
  color: #f38100;
  font-size: 16px;
  cursor: pointer;
  border: 1px solid #f38100;
  text-decoration: none;
  width: 100%;
  border-radius: 4px;
  display: block;
  line-height: 1.5em;
}

.hollow-btn-g{
  text-align: center;
  padding: 8px 0;
  color: @green;
  font-size: 16px;
  cursor: pointer;
  border: 1px solid @green;
  text-decoration: none;
  width: 100%;
  border-radius: 4px;
  background-color: transparent;
  display: block;
}

input[type=button].hollow-btn-g{
  font-size: 14px;
  line-height: 1.5em;
}


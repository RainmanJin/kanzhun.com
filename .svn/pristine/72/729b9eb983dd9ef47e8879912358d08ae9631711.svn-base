@import "common/var";
@auth-icons: url("@{img}/auth.png");
@-moz-keyframes zoomIn{from{opacity:0;-moz-transform:scale(0);} to{opacity:1;-moz-transform:scale(1);}}
@-webkit-keyframes zoomIn{from{opacity:0;-webkit-transform:scale(0);} to{opacity:1;-webkit-transform:scale(1);}}
@-ms-keyframes zoomIn{from{opacity:0;-ms-transform:scale(0);} to{opacity:1;-ms-transform:scale(1);}}html{height:100%;}
@keyframes zoomIn{from{opacity:0;-ms-transform:scale(0);} to{opacity:1;-ms-transform:scale(1);}}html{height:100%;}


@-webkit-keyframes shake {
  0%, 100% {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }

  10%, 30%, 50%, 70%, 90% {
    -webkit-transform: translateX(-10px);
    transform: translateX(-10px);
  }

  20%, 40%, 60%, 80% {
    -webkit-transform: translateX(10px);
    transform: translateX(10px);
  }
}

@keyframes shake {
  0%, 100% {
    -webkit-transform: translateX(0);
    -ms-transform: translateX(0);
    transform: translateX(0);
  }

  10%, 30%, 50%, 70%, 90% {
    -webkit-transform: translateX(-10px);
    -ms-transform: translateX(-10px);
    transform: translateX(-10px);
  }

  20%, 40%, 60%, 80% {
    -webkit-transform: translateX(10px);
    -ms-transform: translateX(10px);
    transform: translateX(10px);
  }
}

.shake {
  -webkit-animation-name: shake;
  animation-name: shake;
}
.animated {
  -webkit-animation-duration: .6s;
  animation-duration: .6s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

body{
  background-color: #fff;
}


.auth_view{
  width: 990px;
  margin: 80px auto;
  overflow: hidden;
  zoom: 1;

  .auth_bg{
    float: left;
  }
}

section{
  &.auth{
    float: right;
    background-color: #f2f2f2;
    padding: 30px 25px;
    width: 324px;
    border-top: 2px solid @green;

    text-align: left;
    display: block;
    vertical-align: middle;

    h3{
      font-size: 22px;
      font-weight: normal;
      height: 34px;
      position: relative;

      span{
        font-size: 16px;
        float: right;
        color: #999999;
        margin-top: 5px;

        .transition(all .2s ease);

        &:hover{

        }

        i{
          width: 20px;
          height: 19px;
          display: inline-block;
          background: @auth-icons no-repeat -41px 0;
          vertical-align: middle;
          margin-left: 2px;
          vertical-align: -3px;
          *vertical-align: middle;
        }
      }

      a{
        color: @green;

        &.jump{
          &:hover{
            color: #96ca46;
          }
        }

        &.dialog_close{
          position: absolute;
          right: -16px;
          top: -22px;
          background: @auth-icons no-repeat -145px -1px;
          width: 18px;
          height: 18px;
          display: block;
          .transition(background-color .2s ease);

          &:hover{
            background-color: #e0e0e0;
          }
        }
      }
    }


    ul{
      div{
        border-width: 1px;
        border-style: solid;
        border-color: #d5d5d5 #d8d8d8 #d5d5d5 #d8d8d8;
        height: 26px;
        border-radius: 4px;
        padding: 8px 0;
        background-color: #fff;
        margin-bottom: 15px;
        position: relative;
        .transition(all .2s ease);

        &.focus{
          border-width: 1px;
          border-style: solid;
          border-color: @green;
        }

        &.error{
          border-width: 1px;
          border-style: solid;
          border-color: @red;
        }
      }

      label{
        width: 18px;
        padding: 2px 12px 0 12px;
        height: 26px;
        border-right: 1px solid #e1e1e1;
        float: left;
        font-size: 0;

        i{
          background-image: @auth-icons;
          background-repeat: no-repeat;
          width: 18px;
          height: 26px;
          display: inline-block;
          &.user{
            background-position: 0 0;
          }

          &.pwd{
            background-position: -21px 0;
          }
        }
      }
      .ifd{
        border: 0;
        background-color: transparent;
        font-size: 14px;
        color: #999;
        width: 258px;
        padding: 5px 10px;
        margin-left: 42px;
        display: block;
      }

      p.err{
        font-size: 12px;
        display: none;
        width: 122px;
        height: 28px;
        position: absolute;
        left: 169px;
        top: -15px;
        color: @red;
        padding-left: 32px;
        line-height: 22px;
        overflow: hidden;
        background: @auth-icons no-repeat 0 -28px;
        z-index: 2;
      }

      .code{
        div{
          width: 220px;
          *display: inline;
          *zoom: 1;
          vertical-align: middle;
          margin-top: 0;
        }

        .ifd{
          width: 156px;
          margin: 0;
          background-color: #fff;
        }

        img{
          height: 44px;
          float: right;
          border-radius: 4px;
        }
      }
    }


    .agree{
      font-size: 14px;
      color: #999999;
      margin-bottom: 15px;

      input{
        vertical-align: -1px;
        margin-right: 2px;
      }

      a{
        color: @green;
      }
    }

    .auth_btn{
      width: 322px;
      height: 42px;
      border: 0;
      background-color: @green;
      color: #fff;
      line-height: 42px;
      font-size: 20px;
      cursor: pointer;
      border-radius: 2px;

      .transition(background-color .2s ease);

      &:hover{
        background-color: #96ca46;
      }
    }

    aside {
      p{
        font-size: 14px;
        padding-top: 20px;
      }
      a {
        display: inline-block;
        position: relative;
        width: 46px;
        font-size: 0;
        height: 46px;
        background:  @auth-icons no-repeat -165px 0;
        text-align: center;
        margin-right: 10px;
        .transition(top .3s ease);

        i {
          display: inline-block;
          height: 23px;
          margin-top: 11px;
          background-image: @auth-icons;
          background-repeat: no-repeat;


          &.qq {
            background-position: -63px 0;
            width: 22px;
          }

          &.rr {
            background-position: -87px 0;
            width: 23px;
          }

          &.wb {
            background-position: -114px 0;
            width: 29px;
          }
        }

        &:hover{
          top: -2px;
        }
      }
    }
  }
}

.sys_err{
  color: #d60000;
  height: 16px;
  text-align: right;
  font-weight: bold;
  padding-bottom: 5px;
}
span.middle-helper{
  display: inline-block;
  width: 1px;
  height: 100%;
  margin-right: -1px;
  vertical-align: middle;
}

footer.auth_footer{
  width: 990px;
  margin: 50px auto;
  nav, p{
    text-align: center;
    border-top: 1px solid #e5e5e5;
    padding: 10px 0;
    color: #797979;

    a{
      color: #797979;
      margin: 0 30px 0 0;
      &.micro_message {
        position: relative;
        i {
          display: none;
        }
        &:hover {
          i {
            position: absolute;
            top: -238px;
            left: -70px;
            display: inline-block;
            width: 202px;
            height: 232px;
            background: url("@{img}/footer_weixin_hover.png") no-repeat center;
          }
        }
      }
    }
  }
}
        a{
          .ellipsis(ellipsis);
          display: block;
        }
			}
		}

		.wb{
			position: relative;
			display: block;
			font-size: 0;
			img{
				width: 54px;
				height: 54px;
			}
			span{
				display: block;
				width: 54px;
				height: 54px;
				position: absolute;
				left: 0;
				top: 0;
				background: transparent url(../images/circle_mask24.png) no-repeat left top;
			}
		}

		.staff {
			&:hover{
				span{
					background-position: -58px top;
			}
			}
				
		}

		.e_headimg {
			img {
				width: 70px;
				height: 70px;
			}

			span {
				width: 70px;
				height: 70px;
				background: transparent url(../images/employ_03.png) no-repeat left top;
			}

			span.current {
				background-position: -75px top;
			}

			// /*鼠标经过变方*/

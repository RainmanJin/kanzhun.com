.employee{
	dt{
		width: 70px;
		float: left;
		position: relative;
		min-height: 920px;
		_height: 920px;

		ul{
			&.way{
				background-image: url(../images/way-v.jpg);
				background-repeat: no-repeat;
				width: 77px;
				display: block;
				position: absolute;
				left: -10px;
				top: 20px;
				//margin-left: -485px;
				text-align: center;
				//padding-top: 20px;
				line-height: 18px;

				li{
					margin-bottom: 24px;
				}

				a{
					text-align: center;
					color: @grey_99;
					display: block;
					cursor: pointer;

					&:hover{
						color: @green;
						text-decoration: none;
						font-weight: bold;
					}
					&.from{
						width: 58px;
						height: 58px;
						line-height: 58px;
						margin: 0 auto;
					}

					&.staff{
						width: 77px;
						height: 77px;
						line-height: 77px;
					}
				}
					
				strong{
					text-align: center;
					color: @green;	
					display: block;
					&.from{
						width: 58px;
						height: 58px;
						line-height: 58px;
						margin: 0 auto;
					}

					&.staff{
						width: 77px;
						height: 77px;
						line-height: 77px;
					}
				}

				li.hcolor {
					color: #7CB228;
				}

				&.fixed{
					position: fixed;
					left: 50%;
					top: 45px;
					margin-left: -485px;
				}
			}

			&.way_from{
				background-position: -78px 0;

				li {
					color: @green;
				}
			}

			&.way_current{
				background-position: -156px 0;
			}

			&.way_to{
				background-position: 0 0;
			}
		}
		
		// li{
		// 	font-size: 14px;
		// 	margin-bottom: 73px;
		// }
		
	}

	dd{
		padding: 15px 0;
		zoom: 1;
		overflow: hidden;
		margin-left: 80px;
	}

	.btn_grey_l{
		padding: 0 45px;
		font-size: 17px;
	}
}

.employee_co{
	dd{
		border-bottom: 1px solid @grey_e7;
		.e_logo{
			width: 90px;
			height: 90px;
			padding: 2px;
			border: 1px solid @grey_e7;
			float: left;
			margin-right: 10px;
		}

		.e_headimg {
			width: 70px;
			height: 70px;
			float: left;
			margin-right: 10px;

			&:hover{
				span{
					background-position: -75px top;
				}
			}
		}

		.e_info{
			width: 105px;
			float: left;
			padding-top: 20px;

			p{
				border-bottom: 1px solid @grey_e7;
				padding: 5px 0;
				margin-bottom: 5px;
				font-size: 15px;
			}
		}

		.e_detail {
			width: 440px;
			float: left;
			h4 {
				font-size: 14px;
				color: @blue;
				font-weight: normal;
			}
			p.position {
				padding: 5px 0;
			}
		}

		ul{
			margin-left: 220px;
			padding-top: 15px;

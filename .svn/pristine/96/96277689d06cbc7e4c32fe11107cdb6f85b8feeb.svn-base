.d_share{
	background-color: #fff;
	padding: 30px;
	border-bottom: 1px solid #bfbfbf;
	overflow: hidden;
	zoom: 1;

	dt{
		float: left;
		width: 106px;
		img{
			width: 100px;
			height: 100px;
		}
		a{
			font-size: 15px;
			display: inline-block;
			padding: 0 10px;
			border: 2px solid #f4cb9a;
			border-radius: 3px;
			margin-left: 8px;
			color: #4c4c4c;
		}
		p.micro_blog {
			a:hover {
				border-color: #f48d19;
				text-decoration: none;
			}
		}
	}

	dd{
		margin-left: 115px;
		line-height: 1.6em;

		h4{
			font-size: 17px;
			padding: 5px 0;
			border-bottom: 1px solid @grey_e7;
			margin-bottom: 10px;
		}

		a,span{
			margin: 0 5px;
			color: @grey_99;
		}

		a:hover {
			color: @green;
			text-decoration: none;
		}
	}

	.female{
		width: 12px;
		height: 12px;
		overflow: hidden;
		display: inline-block;
		background: @icons no-repeat -85px -128px;
		margin-right: 5px;
	}
	.male{
		width: 12px;
		height: 12px;
		overflow: hidden;
		display: inline-block;
		background: @icons no-repeat -60px -128px;
		margin-right: 5px;
	}
	span.currentcmp {
		color: #7cb228;
	}
}

.way_h{
	padding: 30px 0;
	background: #dedede url(../images/way-h.jpg) no-repeat 0 80px;
	table{
		width: 680px;
	}
	td{
		vertical-align: middle;
		text-align: center;
		width: 136px;
		padding-left: 0px;
	}

	.co{
		td{
			height: 115px;
			background: url(../images/way_circle.png) no-repeat 30px 10px;
			text-align: center;

			img{
				width: 58px;
				margin-left: 20px;
			}

			&.first{
				background: url(../images/way_circle.png) no-repeat right 10px;
				img{
					margin-left: 40px;
				}
			}

			&.last{
				background: url(../images/way_circle.png) no-repeat 14px 10px;
				img{
					margin-right: 30px;
				}
			}

			&.mid{
				background: url(../images/way_circle_b.png) no-repeat 20px 0;
				img{
					width: 72px;
				}
			}
			&.nobg{
				background: transparent url('');
			}
		}
	}

	.pic{
		td{
			padding: 5px 0;
			line-height: 1.4em;
			
			p{
				margin-left: 10px;
				color: @grey_99;
			}
			&.first{
				p{
					margin-left: 30px;
				}
			}

			&.last{
				p{
					margin-right: 30px;
				}
			}
			em{
				margin: 0 4px;
			}
		}

		a{
			display: inline-block;
			font-size: 15px;
			.ellipsis(ellipsis);
			width: 6em;
			line-height: 1.5em;
		}
	}

	a.prevent{
		color: @grey_99;
		cursor: default;
		&:hover{
			color: @grey_99;
			text-decoration: none;
		}
	}
}
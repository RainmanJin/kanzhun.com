@import "../common/var";

h1 {
  font-size: 24px;
  margin-bottom: 15px;
  font-weight: normal;
}
ul.progress {
  li{
    &.step {
      width: 646px;
      height: 32px;
      background-image: url(../images/progress_bar.png);
      background-repeat: no-repeat;
    }

    &.onestep {
      background-position: left top;
    }

    &.twostep {
      background-position: left -40px;
    }

    &.threestep {
      background-position: left -80px;
    }

    &.words{
      padding-left: 15px;
      margin-top: 15px;
    }
  }

  em {
    display: inline-block;
    width: 204px;
    font-size: 14px;
    color: @grey_99;
    text-align: center;

    &.current {
      color: @def;
    }
  }
}
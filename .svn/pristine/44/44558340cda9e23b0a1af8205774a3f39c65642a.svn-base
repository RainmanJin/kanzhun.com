select{
	&.def{
		height: 22px;
		line-height: 22px;
	}
}

textarea{
	outline: none;
	&.def{
		border: 0;
		line-height: 1.8em;
		font-size: 12px;
	}

	&.hightlight{
		background-color: @hightlight;
	}
}



// tooltip
.tip{
	cursor: pointer;
	color: @blue;
}
.tooltip{
	display: none;
	position: absolute;

	dt{
		height: 13px;
		position: relative;

		a.close{
			position: absolute;
			width: 20px;
			height: 20px;
			background: url(../images/overlay-icons.png) no-repeat 0 -18px;
			display: block;
			right: 3px;
			top: 17px;
			.transition(all .2s linear);
			.transform(rotate(0deg));

			&:hover{
				.transform(rotate(90deg));
			}
		}
		span.arrow{
			width: 21px;
			height: 13px;
			background: url(../images/overlay-icons.png) no-repeat 0 0;
			display: block;
			margin: 0 0 0 30px;
		}
		
	}
	
	dd{
		min-width: 200px;
		border-radius: 4px;
		background-color: #e7e7e7;
		background-color: rgba(231, 231, 231, 0.9);
		padding: 10px;
		.box-shadow(1px 2px 8px #ccc);
	}
}



div{
  .s4{
    width: 100%;
    height: 50%;
    overflow: hidden;
    background: #ffffff url("../../images/fullpage/baobao/b4.jpg") no-repeat center bottom;
  }


  .s4_w{
    height: 50%;
    text-align: center;
    position: relative;
    z-index: 10;
    background: #edf0f4;

    a.download{
      border: 2px solid #838484;

    }

    em{
      font-size: 40px;
      color: #ff5800;
    }

    p.s4_bd{
      position: absolute;
      height: 40px;
      width: 100%;
      top: 0;
      left: 0;
      background-color: #cccccc;
    }

    .s4_img{
      padding-top: 65px;
      padding-bottom: 15px;
    }

    div{
      padding: 10px;
      a{
        display: inline-block;
        background-color: transparent;
        color: #838484;
        padding: 5px 15px;
        margin: 0 20px;
      }
    }

    p.links{
      font-size: 12px;
      padding: 10px 0;
      color: #999;
      a {
        margin: 0 2px;
        color: #999;
      }
    }
  }
}


div.screen_shot {
  width: 299px;
  height: 493px;
  padding: 95px 0 0 25px;
  background: transparent url("../../images/fullpage/iphone.png") no-repeat 0 0;

  img {
    width: 278px;
    height: 493px;
    display: block;
  }
}

a {
  &.download {
    text-decoration: none;
    color: #ffffff;
    border: 2px solid rgba(255,255,255,.4);

    padding: 5px 0;
    text-align: center;
    white-space: nowrap;
    display: inline-block;
    font-size: 16px;
    background-color: rgba(0, 0, 0, .2);

    i {
      margin-right: 15px;
      background-image: url("../../images/fullpage/download.png");
      background-repeat: no-repeat;
      display: inline-block;
      vertical-align: middle;
      width: 28px;
      height: 33px;
    }
  }
  &.download_i {
    i {
      background-position: 0 0;
    }
  }

  &.download_a {
    i {
      background-position: -30px 0;
    }
  }

  &.download_i2 {
    i {
      background-position: 0 -39px;
    }
  }

  &.download_a2 {
    i {
      background-position: -30px -39px;
    }
  }
}




























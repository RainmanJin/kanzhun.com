@import "../common/var";
@import "../common/reset";
@import "../common/effect";

#header {
  position: fixed;
  height: 60px;
  display: block;
  width: 100%;
  background: #ffffff;
  z-index: 12;
  top: 0;
  left: 0;
  border-bottom: 1px solid #cccccc;
  img{
    margin-left: 20%;
  }
}

#fullpage {

  .s1 {
    width: 100%;
    height: 70%;
    background: url("../../images/fullpage/baobao/bb-1.jpg") no-repeat center top;
  }

  .s1_w {
    height: 30%;
    text-align: center;
    position: relative;
    z-index: 10;
    background: #ffffff;

    img {
      margin-top: 3%;
      max-height: 80%;
      vertical-align: middle;
    }
  }

  .s1_ss {
    position: absolute;
    z-index: 9;
    height: 55%;
    bottom: -50%;
    right: 65%;
    opacity: 0;
    filter: alpha(opacity=0);
    .transition(all 1s ease-out);
  }

  .entrance_top {
    position: absolute;
    left: 44%;
    bottom: 31%;
    height: 40%;

    .s1_banner {
      height: 30%;
      margin-right: 100px;
    }

    p {
      width: 500px;
      img {
        //width: 38%;
        width: 148px;
        margin-left: 10%;
        float: left;
      }
      span{
        float: left;
        position: relative;


        a {
          //float: left;
          //width: 50%;
          padding: 11px 0;
          width: 200px;
        }
      }

      //width: 100%;
      //margin-top: 10%;
      //height: 40%;
      bottom: 8%;
      left: 0;
      position: absolute;
    }
  }
}

#section1{
  position: relative;


  .li{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .entrance_top p .anhao{
    position: absolute;
    top: -270px;
    left: 0;
    margin: 0;
    width: 100%;
    display: none;
  }
}
div{
  .s2{
    width: 100%;
    height: 70%;
    background-color: #fff;
    z-index: 2;
  }

  .s2_ss_l{
    position: absolute;
//    right: 51%;
    bottom: 30%;
    right: 60%;
    height: 50%;
    opacity: 0;
    filter: alpha(opacity=0);
    .transition(all 1s ease-out);
  }
  .s2_ss_r{
    position: absolute;
//    left: 51%;
    left: 60%;
    opacity: 0;
    filter: alpha(opacity=0);
    bottom: 30%;
    height: 50%;
    .transition(all 1s ease-out);
  }

  .s2_w{
    height: 30%;
    text-align: center;
    position: relative;
    z-index: 10;
    background: #edf0f4;

    img {
      margin-top: 3%;
      max-height: 60%;
      vertical-align: middle;
      .transition(all 2s ease-in-out);
    }
  }
}



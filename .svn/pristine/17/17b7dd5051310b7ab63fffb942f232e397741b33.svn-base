@import "../common/var";

footer.auth_footer{
  position: relative;
  width: 990px;
  margin: 140px auto;
  z-index: 3;
  nav {
    border-width: 1px 0;
    border-style: solid;
    border-color: #e5e5e5;
  }
  nav, p{
    text-align: center;
    //border-top: 1px solid #e5e5e5;
    padding: 10px 0;
    color: #797979;

    a{
      color: @grey_66;
      //margin: 0 30px 0 0;
      &.micro_message {
          position: relative;
          i {
              display: none;
          }
          &:hover {
              i {
                  position: absolute;
                  top: -238px;
                  left: -70px;
                  display: inline-block;
                  width: 202px;
                  height: 232px;
                  background: url(../images/footer_weixin_hover.png) no-repeat center;
              }
          }
      }
    }

    em {
      margin: 0 15px;
      color: #d7d6d6;
    }
  }
}

footer.footbottom {
  width: 100%;
  min-width: 990px;
  margin-top: 40px;
  padding: 30px 0;
  background-color: #6f6e6e;
  nav {
    text-align: center;
    a {
      display: inline-block;
      color: #fff;
      margin: 0 30px 15px 0;

      &.micro_message {
        position: relative;
        i {
          display: none;
        }
        &:hover {
          i {
            position: absolute;
            top: -240px;
            left: -70px;
            display: inline-block;
            width: 202px;
            height: 232px;
            background: url(../images/footer_weixin_hover.png) no-repeat center;
          }
        }
      }

      &.a_green{
        color: @green;
      }
    }
  }
  p {
    //padding-bottom: 34px;
    text-align: center;
    color: @grey_99;
  }
}
div#quick {
  position: fixed;
  bottom: 150px;
  right: 10px;
  width: 48px;
  a {
    display: block;
    font-size: 0;
    line-height: 0;
    width: 48px;
    height: 48px;
    background-image: url(../images/backimgs_03.png);
    background-repeat: no-repeat;

    &.back {
      float: left;
      background-position: center top;
      display: none;
      &:hover {
        background-position: center bottom;
      }
    }

    &.suggestions {
      float: left;
      background-position: center -76px;
      clear: both;
      &:hover {
        background-position: center -144px;
      }
    }

  }
}
@import "common/var";
@import "module/reset";
@import "common/common";

html{
  font-size: 14px;
}

body{
  background: url("@{img-path}/step_bg.jpg") #06488e no-repeat top center;
  background-size: 100% auto;
}

.content{
  position: relative;
  .title{
    padding-top: 30px;
    text-align: center;
    .mark{
      width:80%;
    }
    .vertical{
      margin-top: -20px;
      width:75%;
    }
    .word{
      position: relative;
      top: -1.8em;
      font-size: 1.5rem;
      color:red;
      font-weight: bold;
    }
  }//title


  .form{

    width: 80%;
    margin: 0 auto;

    input[type=text]{
      width: 100%;
      background-color: #fefefe;
      border: 0px;
      padding: 10px 5px;
      font-size: 1.2rem;
      color: rgb( 153, 153, 153 );
      margin-top: -10px;
    }

    .tip{
      color: #fefefe;
      margin:5px 0px 20px 0px;
    }

    .center-wrap{
      text-align: center;
      color: #fff;


      .h2{
        font-size: 1.3rem;
        font-weight: bold;
      }

      .re-wrap {
        border: 1px solid #ffffff;
        border-radius: 6px;
        background-color: rgba(124, 178, 40, 0);
        width: 60%;
        margin: 5px auto;
        padding: 10px 0px;
        font-size: 1.2rem;
        position: relative;

        label{
          position: relative;
          z-index: 3;
        }

        input[type=radio]{
          display: none;
        }

        input:checked~.bg{
          background-color: #ffaa12;
          border: 1px solid #ffaa12;
        }

        .bg{
          position: absolute;
          width: 100%;
          height: 100%;
          top: -1px;
          left: -1px;
          border-radius: 6px;
        }


      }
      .next{
        color: #fff;
        background-color: #e77200;
        width: 50%;
        margin: 0 auto;
        margin-top: 10px;
        padding: 10px 0px;
        display: inline-block;
        border-radius: 6px;
        font-size: 1.3rem;
        font-weight: bold;
      }
    }
  }
}

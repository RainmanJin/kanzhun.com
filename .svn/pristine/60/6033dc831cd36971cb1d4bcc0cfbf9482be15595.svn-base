@import "../common/var";
//自定义大的下拉框
.select_green{
  height: 28px;
  border-style: solid;
  border-color: #cfcfcf;
  border-width: 1px;
  position: relative;
  width: 190px;

  dt{
    text-align: center;
    vertical-align: middle;
    height: 28px;
    background-color: #fff;
    padding: 0 40px 0 0;

    input{
      height: 28px;
      line-height: 28px;
      float: left;
      border: 0;
      width: 100%;
      color: @def;
      padding-left: 15px;
      background-color: transparent;
      text-align: left;
      &.red{
        color: @red;
      }
    }

    span{
      width: 28px;
      height: 26px;
      position: absolute;
      right: 1px;
      top: 1px;
      display: block;
      font-size: 0;
      background-color: @cyan ;
      text-align: center;
      cursor: pointer;
      zoom: 1;

      i{
        display: inline-block;
        font-size: 0;
        zoom: 1;
        width: 9px;
        height: 5px;
        margin-top: 10px;
        overflow: hidden;
        .transition(all .2s linear);
        .transform(rotate(0deg));
        background: transparent url("@{img}/field/co-pk.png") no-repeat 0 -209px;
      }

      &.on{
        i{
          .transform(rotate(180deg));
        }
      }
    }
  }

  dd{
    position: absolute;
    z-index: 100;
    max-height: 260px;
    overflow: auto;
    .box-shadow(0 2px 6px #ccc);
    left: -1px;
    top: 29px;
    border: 1px solid #cfcfcf;
    border-top: 0;
    background-color: #fff;
    width: 100%;
    display: none;

    a{
      display: block;
      height: 26px;
      line-height: 26px;
      padding-left: 15px;
      color: #333;

      &:hover{
        text-decoration: none;
        background-color: @cyan;
        color: #fff;
      }
    }
  }

  &:hover{
    border-color: @cyan;

    dt{
      background-color: #ebebeb;
    }
  }
}
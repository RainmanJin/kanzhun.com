@import "../common/var";

@-webkit-keyframes 'barrageleft' {

 }

a.barrage_option {
	//position: relative;
	float: right;
	width: 40px;
	height: 50px;
	background: rgba(111, 110, 110, 0.88) url(../images/barrage_close.png) no-repeat center;
	.background-size(20px, 20px); 
	z-index: 21px;
}

div.only_bg {
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 19;
	width: 100%;
	height: 50px;
}

div.barrage {
	position: relative;
	//margin-right: 40px;
	height: 50px;
	background-color: rgba(111, 110, 110, 0.88);
	overflow: hidden;

	div {
		position: absolute;
		width: auto;
		left: 100%;
		z-index: 20;
	}
}

p.barrage_box {
	height: 26px;
	padding: 12px 0;
	//padding-left: 10px;
	//background-color: rgba(111, 110, 110, 0.88);
	white-space: nowrap;

	a {
		display: inline-block;
		vertical-align: middle;
		white-space: nowrap;

		&.logo {
			width: 24px;
			height: 24px;
			margin-right: 8px;
			border: 1px solid #fff;

			img {
				width: 24px;
				height: 24px;
			}
		}

		&.items {
			height: 26px;
			margin-right: 25px;
			line-height: 26px;
			color: #fff;

			em {
				&.comment{
				  color: #7cd3fd;
				}

				&.audition{
				  color: #ffae00;
				}

				&.salary{
				  color: #71fa5a;
				}
			}
		}
	}
}


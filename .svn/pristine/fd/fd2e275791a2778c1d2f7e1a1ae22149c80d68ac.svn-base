@import "../../../../css/common/var";
@import "../../var";
@import "piece/icons";
@import "piece/aside";
@import "piece/content_r";
section.bg {
  background: url("@{img}/activity/jinping/list_bg_line.png") repeat-y center;
}
.main{
  background: url("@{img}/activity/jinping/season_bg.jpg")  center no-repeat;
  min-height: 1400px;
  .title-wrap{
    text-align: center;
    padding-top: 40px;
    .horzontal{
      margin-top: -20px;
    }
    p{
      margin-top: -55px;
      padding-bottom: 50px;
        font-size: 32px;
        color: rgb( 189, 18, 0 );
        font-weight: bold;
    }
  }
}
div.co_header{
  margin: -60px auto 0;
  width: 1150px;
  height: 210px;
  padding-top: 15px;
  background-color: rgba(255,255,255,0.1);
  color: #fff;
  .ch_inner{
    height: 170px;
    border: 2px solid #6e74ac;
    background-color: #473681;
    margin: 0 15px;
    padding: 20px 20px 0 ;
    .logo{
      display: inline-block;
      width: 150px;
      height: 150px;
      float: left;
    }
    .chi_r{
      margin-left: 180px;
      position: relative;
      h2{
        font-size: 20px;
      }
      .p1{
        color: #fefefe;
        em{
          color: #5d589f;
          margin: 0 10px;
        }
      }
      ul{
        li{
          float: left;
          background: url("@{img}/activity/jinping/bgs.png") no-repeat 0 -60px;
          width: 132px;
          height: 76px;
          text-align: center;
          margin-right: 10px;
          h4{
            font-size: 26px;
            color: #ffe236;
          }
          p{
            font-weight: bold;
            font-size: 16px;
          }
        }
      }
      .chir_follow{
        position: absolute;
        bottom: 15px;
        right: 0;
      }
    }
  }
}
.content {
  width: 1150px;
  margin: 0 auto;
  .content_l {
    width: 810px;
    margin-right: 15px;
    float: left;
    h2.tt{
      height: 85px;
      line-height: 85px;
      background: url("@{img}/activity/jinping/fonts.png") no-repeat 0 -260px;
      font-size: 30px;
      color: #fff;
      text-align: center;
    }
    .co_details{
      height: 85px;
      background-color: rgba(255,255,255,0.1);
      color: #fff;
      ul{
        float: left;
        li{
          padding: 15px 30px 0;
          height: 70px;
          border-right: 1px solid #456ea7;
          float: left;
          text-align: center;
          .p1{
            font-size: 16px;
          }
          .p2{
            font-size: 26px;
            font-weight: bold;
          }
          &.no_rBorder{
            border-right: 0;
          }
        }
      }
      div.tips{
        float: left;
        margin-top: 45px;
        span{
          display: inline-block;
          border: 1px solid #768ac1;
          padding: 0 5px;
        }
      }
    }
    .comment{
      background-color: rgba(255,255,255,0.1);
      padding: 15px 10px;
      i{
        vertical-align: middle;
      }
      textarea{
        background-color: rgba(255,255,255,0.2);
        border: 0;
        color: #fff;
        display: inline-block;
        width: 590px;
        padding: 11px;
        height: 24px;
        font-size: 16px;
        vertical-align: middle;
      }
      .bt{
        width: 106px;
        height: 46px;
        line-height: 46px;
        font-size: 16px;
        font-weight: normal;
      }
    }
    .comment_list{
      color: #fff;
      li{
          background-color: rgba(255,255,255,0.2);
          padding: 15px;
          margin-bottom: 15px;
          h4{
            font-weight: normal;
            font-size: 16px;
            span{
              font-size: 22px;
              font-weight: bold;
              color: #ffe236;
              vertical-align: middle;
            }
            em{
              display: inline-block;
              background-color: #ffe236;
              padding: 0 3px;
              border-radius: 3px;
              font-size: 14px;
              color: #680000;
            }
          }
          .taps{
            display: inline-block;
            background-color: rgba(255,255,255,0.3);
            padding: 0 5px;
            border-radius: 3px;
          }
          .pFrom{
            color: #9584a2;
          }
          &.now{
            border: 1px solid #ffe236;
          }
        }
    }
  }
  .content_r{
    float: right;
    width: 325px;
  }
}
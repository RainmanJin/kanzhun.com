.average {
  padding: 15px;
}
.average .title {
  padding-top: 5px;
  padding-bottom: 15px;
  border-bottom: 1px solid #e7e7e7;
  font-size: 15px;
  color: #333333;
  overflow: hidden;
}
.average .title span {
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  word-wrap: normal;
  width: 10em;
}
.average .title a {
  float: right;
  font-size: 14px;
  font-weight: normal;
}
.average .item a:hover {
  text-decoration: none;
}
.average .item .t {
  text-align: center;
  font-size: 14px;
  margin-top: 20px;
}
.average .item .t span {
  font-size: 30px;
  color: #e85253;
}
.average .item div {
  padding-left: 24px;
  border: 1px solid #cccccc;
  height: 24px;
  line-height: 24px;
  border-radius: 5px;
  text-indent: 10px;
  margin: 10px;
  color: #666666;
}
.average .item div span {
  float: right;
  background: #7cb228;
  padding: 0 5px;
  color: #fff;
  height: 26px;
  position: relative;
  top: -1px;
  right: -1px;
  border-radius: 0 5px 5px 0;
}
.average .item div span i.tangle_init {
  border-width: 5px;
  border-style: dashed solid dashed dashed;
  border-color: transparent  #7cb228  transparent transparent;
  vertical-align: 3px;
  position: absolute;
  left: -10px;
  top: 35%;
  display: block;
}
.average .item div span.color_o {
  background: #f38100;
}
.average .item div span.color_o i.tangle_init {
  border-color: transparent #f38100 transparent transparent;
}
.average .item div span.color_r {
  background: #e97778;
}
.average .item div span.color_r i.tangle_init {
  border-color: transparent #e97778 transparent transparent;
}
.average .item p.employee_share {
  margin: 0 10px;
}

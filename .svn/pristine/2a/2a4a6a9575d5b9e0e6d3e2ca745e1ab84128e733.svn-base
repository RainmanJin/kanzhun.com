@font-face {
  font-family: 'AVGARDNI';
  src: url('@{img-path}/AVGARDNI.TTF');
}

body{
	font: normal 14px/1.5 Arial,STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
  color: @black;
  background-color: #f2f2f2;
}

input, button, textarea{
	font: normal 14px/1.5 Arial,STHeiti, Microsoft YaHei, simsun, Helvetica, sans-serif;
}

//links
a {
  color: @blue;
}


@import "../common/var";

input{
	&.ipt{
		width: 256px;
		border: 2px solid #e3e4e8;
		border-radius: 5px;
		padding: 10px;
		color: #abadb3;
		height: 21px;
		&.err_b{
			border: 2px solid @red;
		}
	}
}
.btn_green{
	width: 230px;
	display: inline-block;
	font-size: 16px;
	color: #fff;
	background-color: #53cac4;
	padding: 8px;
	border-radius: 5px;
	border: 0;
	cursor: pointer;
	text-align: center;
	&:hover{
		text-decoration: none;
	}
}
.btn_red{
	width: 230px;
	display: inline-block;
	font-size: 16px;
	color: #fff;
	background-color: @red;
	padding: 8px;
	border-radius: 5px;
	border: 0;
	cursor: pointer;
	text-align: center;
	&:hover{
		text-decoration: none;
	}	
}
.select{
	width: 256px;
	height: 41px;
	border: 2px solid #e3e4e8;
	padding: 0 10px;
	border-radius: 5px;
	position: relative;
	dt{
		input{
			display: inline-block;
			width: 100%;
			height: 41px;
			border: 0;
			background-color: transparent;
			text-align: left;
			color: #abadb3;
		}
		.btn{
			position: absolute;
			top: 0;
			right: 0;
			display: inline-block;
			font-size: 0;
			padding: 16px 10px 0;
		}
	}
	dd{
		display: none;
		position: absolute;
		top: 53px;
		left: 0;
		background-color: #32323a;
		border-radius: 5px;
		width: 100%;
		.inner{
			padding: 5px;
			max-height: 320px;
			overflow: auto;
		}
		i{
			position: absolute;
			right: 10px;
			top: -8px;
		}
		a{
			color: #fff;
			height: 32px;
			line-height: 32px;
			display: block;
			padding: 0 10px;
			&:hover{
				background-color: #53cac4;
				text-decoration: none;
			}
		}
	}
	&.err_b{
		border: 2px solid @red;
	}
}

textarea{
	&.tarea{
		width: 576px;
		border: 2px solid #e3e4e8;
		border-radius: 5px;
		padding: 10px;
		color: #abadb3;
		&.err_b{
			border: 2px solid @red;
		}		
	}
}

ul.kword{
	li{
		float: left;
		display: inline-block;
		width: 100px;
		font-size: 14px;
		color: #fff;
		background-color: @green;
		padding:7px 10px;
		border-radius: 5px;
		margin-right: 10px;	
		margin-bottom: 10px;
		position: relative;	
		a.close{
			position: absolute;
			top: 50%;
			right: 10px;
			margin-top: -9px;
		}	
	}
	&.grey{
		li{
			text-align: center;
			background-color: #e1e4e9;
			color: #8f9399;
			cursor: pointer;
		}
	}	
}

//进度条
span.progressbar{
	display: inline-block;
	width: 600px;
	height: 42px;
	background-color: #e1e4e9;
	border-radius: 5px;
	position: relative;
	em{
		display: inline-block;
		height: 100%;
		background-color: @green;
		border-radius: 5px;
	}
	i{
		position: absolute;
		top: 47px;
		margin-left: -21px;
		color: #fff;
		text-align: center;
		padding-top: 5px;
	}
}

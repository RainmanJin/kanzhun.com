@import "../../../css/common/var";
@import "../var";

@auth-icons: url('@{img}/auth.png');
body{
  background-color: #eaeaea;
}
div.auto_view{
  width: 990px;
  padding: 0 15px;
  margin: 15px auto;
  overflow: hidden;
  background-color: #fff;
  h2{
    font-size: 22px;
    font-weight: normal;
    padding: 10px 0;
    border-bottom: 1px solid #e5e5e5;
  }
  section.auth{
    padding: 70px 0;
    border-top: 0;
    background-color: #fff;
  }
}
section{
  &.auth{
    padding: 30px 50px;
    width: 324px;
    margin: 0 auto;
    text-align: left;
    vertical-align: middle;
    background: #eaeaea;
    h3{
      font-size: 22px;
      font-weight: normal;
      height: 34px;
      position: relative;

      span{
        font-size: 16px;
        float: right;
        color: #999999;
        margin-top: 5px;

        .transition(all .2s ease);

        &:hover{

        }

        i{
          width: 20px;
          height: 19px;
          display: inline-block;
          background: @auth-icons no-repeat -41px 0;
          vertical-align: -3px;
          *vertical-align: middle;
          margin-left: 2px;
        }
      }

      a{
        color: @green;

        &.jump{
          &:hover{
            color: #96ca46;
          }
        }

        &.dialog_close{
          position: absolute;
          right: -40px;
          top: -22px;
          background: @auth-icons no-repeat -145px -1px;
          width: 18px;
          height: 18px;
          display: block;
          .transition(background-color .2s ease);
          
          &:hover{
            background-color: #e0e0e0;
          }
        }
      }
    }


    ul{
      div{
        border-width: 1px;
        border-style: solid;
        border-color: #d5d5d5 #d8d8d8 #d5d5d5 #d8d8d8;
        height: 26px;
        border-radius: 4px;
        padding: 8px 0;
        background-color: #fff;
        margin-bottom: 15px;
        position: relative;
        .transition(all .2s ease);

        &.focus{
          border-width: 1px;
          border-style: solid;
          border-color: @green;
        }

        &.error{
          border-width: 1px;
          border-style: solid;
          border-color: @red;
        }
      }

      label{
        width: 18px;
        padding: 2px 12px 0 12px;
        height: 26px;
        border-right: 1px solid #e1e1e1;
        float: left;
        font-size: 0;

        i{
          background-image: @auth-icons;
          background-repeat: no-repeat;
          width: 18px;
          display: inline-block;
          &.user{
            width: 19px;
            height: 17px;
            margin-top: 3px;
            background-position: 0 0;
          }

          &.pwd{
            height: 26px;
            background-position: -21px 0;
          }
        }
      }
      .ifd{
        border: 0;
        background-color: transparent;
        font-size: 14px;
        color: #999;
        width: 258px;
        padding: 5px 10px;
        margin-left: 42px;
        display: block;
      }

      p.err{
        display: none;
        width: 122px;
        height: 28px;
        position: absolute;
        font-size: 12px;
        left: 169px;
        top: -15px;
        color: @red;
        padding-left: 32px;
        line-height: 22px;
        overflow: hidden;
        background: @auth-icons no-repeat 0 -28px;
        z-index: 2;
      }

      .code{
        div{
          width: 220px;
          *display: inline;
          *zoom: 1;
          vertical-align: middle;
          margin-top: 0;
        }

        .ifd{
          width: 156px;
          margin: 0;
          background-color: #fff;
        }

        img{
          height: 42px;
          float: right;
          border: 1px solid #d5d5d5;
          border-radius: 4px;
        }
      }
    }

    .agree{
      font-size: 14px;
      color: #999999;
      margin-bottom: 15px;

      input{
        vertical-align: -1px;
        margin-right: 2px;
      }

      a{
        color: @green;
      }
    }
  }
}

.sys_err{
  color: #d60000;
  height: 16px;
  text-align: right;
  font-weight: bold;
  padding-bottom: 5px;
}
span.middle-helper{
  display: inline-block;
  width: 1px;
  height: 100%;
  margin-right: -1px;
  vertical-align: middle;
}

.auth_btn{
  display: inline-block;
  text-align: center;
  text-decoration: none;
  width: 322px;
  height: 42px;
  border: 0;
  background-color: @green;
  color: #fff;
  line-height: 42px;
  font-size: 20px;
  cursor: pointer;
  border-radius: 2px;
  .transition(background-color .2s ease);

  &:hover{
    background-color: #96ca46;
    text-decoration: none;
  }
}

footer.auth_footer{
  width: 990px;
  margin: 50px auto;
  nav, p{
    text-align: center;
    border-top: 1px solid #e5e5e5;
    padding: 10px 0;
    color: #797979;

    a{
      color: #797979;
      margin: 0 30px 0 0;
      &.micro_message {
        position: relative;
        i {
          display: none;
        }
        &:hover {
          i {
            position: absolute;
            top: -238px;
            left: -70px;
            display: inline-block;
            width: 202px;
            height: 232px;
            background: url("@{img}/footer_weixin_hover.png") no-repeat center;
          }
        }
      }
    }
  }
}


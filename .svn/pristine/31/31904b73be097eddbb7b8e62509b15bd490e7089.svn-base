@import "var";

//margin padding
.mt5{margin-top: 5px;}
.mt10{margin-top: 10px;}
.mt15{margin-top: 15px;}
.mt20{margin-top: 20px;}
.mb10{margin-bottom: 10px;}
.mb15{margin-bottom: 15px;}
.mb20{margin-bottom: 20px;}
.ml5{margin-left: 5px;}
.ml10{margin-left: 10px;}
.ml15{margin-left: 15px;}
.ml20{margin-left: 20px;}
.mr10{margin-right: 10px;}
.mr15{margin-right: 15px;}
.mr20{margin-right: 20px;}
.pt10{padding-top: 10px;}
.pt15{padding-top: 15px;}
.p20{padding: 20px;}
.p10{padding: 10px;}


//font
.f_12{
  font-size: 12px;
}
.f_15 {
  font-size: 15px;
}
.f_16{
  font-size: 16px;
}
.f_18{
  font-size: 18px;
}

.orange{
  color: @orange;
}

.red{
  color: @red;
}


//placeholder
::-webkit-input-placeholder {
  color: @placeholder;
}
:-moz-placeholder {
  color: @placeholder;
}
::-moz-placeholder {
  color: @placeholder;
}
:-ms-input-placeholder {
  color: @placeholder;
}



// Hardware-Accelerated CSS
.cube {
   -webkit-transform: translateZ(0);
   -moz-transform: translateZ(0);
   -ms-transform: translateZ(0);
   -o-transform: translateZ(0);
   transform: translateZ(0);
}


//layout
.display-flex{
	display: -webkit-flex;
	display: flex;
}


html{
	height: 100%;
}
body{
	font: normal 1rem/1.5 Arial, Helvetica, "Microsoft YaHei", STHeiti, "Droid Sans Fallback", sans-serif;
	color: @def;
	height: 100%;
}
input, button, textarea, select{
  font: normal 1rem/1.5 Arial, Helvetica, "Microsoft YaHei", STHeiti, "Droid Sans Fallback", sans-serif;
}

a {
	color: @a-def;
	-webkit-tap-highlight-color: rgba(0,0,0,0);

  //默认带下划线
  &.a_ul{
    text-decoration: underline;
  }
}

h1,h2,h3,h4,h5,h6{
	font-size: 1em;
	line-height: 1;
}

.wrapper{
	width: 100%;
	min-height: 100%;
	height: auto;
}

img.block{
  display: block;
}

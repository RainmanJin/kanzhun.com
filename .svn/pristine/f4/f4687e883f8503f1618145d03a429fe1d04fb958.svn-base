@import "module/var";
@import "module/reset";
@import "module/common";
@import "module/slide-wrapper";
@import "module/icons";
@import "module/frame";
@import "module/comment";

body{
  background-color: #f0eff5;
}


div.news{
  padding: 10px;

  dl{
    border: 1px solid #e4e3e8;
    background-color: #fff;
    .box-shadow(0 2px 10px #d0d0d2);
    margin-bottom: 20px;

    &:last-child{
      margin-bottom: 0;
    }
  }
  
  dt{
    padding: 10px 10px 10px 10px;
    position: relative;
    font-size: 16px;

    i{
      color: #ffffff;
      line-height: 1;
      padding: 4px 8px;
      display: block;
      position: absolute;
      right: 0;
      top: 0;
      font-size: 12px;

      &.hot{
        background-color: #f35000;
      }

      &.headline{
        background-color: #fd0100;
      }
    }
  }
  
  dd{
    img{
      width: 100%;
    }

    &:nth-of-type(1){
      p{
        color: #999999;
        padding: 7px 10px;
      }
    }

    &:nth-of-type(2){
      color: #cccccc;
      padding: 7px 0;
      margin: 0 10px;
      border-top: 1px solid #dfdfdd;

      a{
        float: right;
        color: #999;
      }

      em{
        display: inline-block;
        background-color: #f38100;
        vertical-align: 0;
        line-height: 1;
        color: #ffffff;
        margin: 0 20px;
      }

      i{
        vertical-align: -1px;
        margin-right: 2px;
      }
    }
  }


}

div.news-detail{
  background-color: #fff;
  padding: 10px 10px 0;

  h1{
    font-size: 18px;
    margin-bottom: 10px;
    line-height: 1.4em;
  }

  >p{
    margin-bottom: 8px;

    &:nth-of-type(1){
      color: #cccccc;

      a{
        color: #999999;
        font-size: 12px;

        i{
          vertical-align: -1px;
        }
      }
    }

    &:nth-of-type(2){
      a{
        color: #007ead;
        margin: 0 5px;
      }
    }
  }

  article{
    color: #666666;
    p{
      margin-bottom: 1em;
    }
    img{
      width: 100%;
      display: block;
    }
  }


  .click{
    margin: 0 -10px;

    li{
      width: 33.33%;
      padding: 10px;
      .box-sizing();
      border-top: 1px solid #e7e7e7;
      border-right: 1px solid #e7e7e7;
      float: left;
      text-align: center;
      color: #999;

      i{
        vertical-align: -1px;
        margin-right: 2px;
      }

      &:last-child{
        border-right: 0;
        position: relative;

        >div{
          position: absolute;
          right: 10px;
          top: 45px;
        }
      }

      a{
        display: block;
        color: #999999;
      }
    }
  }
}


.news-related{
  margin-top: 10px;
  padding: 10px;

  dt{
    font-size: 16px;
    padding-bottom: 5px;
  }

  dd{
    background-color: #fff;
    padding: 10px 0px 10px 35px;
    border: 1px solid #e4e3e8;

    li{
      line-height: 2em;
      list-style-type: disc;
      font-size: 13px;
    }
    
    a{
      color: @def;
      display: inline-block;
      vertical-align: middle;
      .ellipsis(ellipsis);
      width: 15em;
    }
    
    span{
      color: #cccccc;
    }
  }
}

div.writing{
  border: 1px solid #e4e3e8;
  background-color: #fff;
  .box-shadow(0 2px 10px #d0d0d2);
  padding: 15px 15px 30px;
  margin: 10px;

  h2{
    font-size: 16px;
    border-bottom: 1px dotted #e7e7e7;
    padding: 10px 0px;
    font-weight: bold;
  }

  ul{
    padding: 10px 0;
    li{
      background: url("@{img-path}/writing-i.png") no-repeat 0 4px;
      .background-size(7px);
      padding-left: 15px;
    }
  }

  a{
    color: @green;
  }
}
